<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Vendas - Plantech</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
  
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>

  <style>
    /* Estilos do PDV (Dark Mode) */
    .form-control, .form-select {
      background-color: #12141e !important;
      border: 1px solid rgba(255, 255, 255, 0.1) !important;
      color: #ffffff !important;
    }
    .form-control:focus, .form-select:focus {
      border-color: #f97316 !important;
      box-shadow: 0 0 0 2px rgba(249, 115, 22, 0.2) !important;
    }
    .form-label { color: #e0e0e0; font-weight: 500; font-size: 0.9rem; }
    
    .cart-table-container { max-height: 250px; overflow-y: auto; }
    .cart-table-container::-webkit-scrollbar { width: 6px; }
    .cart-table-container::-webkit-scrollbar-thumb { background: rgba(255,255,255,0.1); border-radius: 10px; }

    .btn-orange { background-color: #f97316; color: white; border: none; border-radius: 50px; font-weight: 700; transition: 0.3s; }
    .btn-orange:hover { background-color: #ea580c; color: white; transform: scale(1.02); }

    /* --- ESTILO DO CUPOM (FIXO PARA IMPRESS√ÉO) --- */
    #area-comprovante {
      /* Importante: display none para n√£o sujar a tela, mas block no JS para imprimir */
      display: none; 
      background-color: #ffffff !important; /* Fundo Branco Obrigat√≥rio */
      color: #000000 !important; /* Texto Preto Obrigat√≥rio */
      padding: 20px;
      font-family: 'Courier New', Courier, monospace; /* Fonte de Cupom */
      width: 80mm; /* Largura da bobina */
      font-size: 12px;
      line-height: 1.2;
      border: 1px solid #ccc;
    }
    
    /* For√ßar cores pretas no cupom */
    #area-comprovante h3, #area-comprovante h4, #area-comprovante p, #area-comprovante td, #area-comprovante th {
      color: #000000 !important;
    }

    .cupom-header { text-align: center; border-bottom: 1px dashed #000; padding-bottom: 10px; margin-bottom: 10px; }
    .cupom-table { width: 100%; border-collapse: collapse; margin-bottom: 10px; }
    .cupom-table th { border-bottom: 1px solid #000; text-align: left; padding: 5px 0; }
    .cupom-table td { padding: 5px 0; }
    .cupom-total { border-top: 1px dashed #000; margin-top: 10px; padding-top: 10px; text-align: right; font-weight: bold; font-size: 14px; }
  </style>
</head>
<body>

  <nav class="navbar navbar-expand-lg border-bottom border-secondary border-opacity-10" data-html2canvas-ignore="true">
    <div class="container">
      <a class="navbar-brand" href="/dashboard"><span style="font-size: 1.5rem;">üå±</span> Plantech</a>
      <button class="navbar-toggler bg-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"><span class="navbar-toggler-icon"></span></button>
      <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
        <div class="nav-pills-custom">
          <a href="/dashboard" class="nav-link-custom">Dashboard</a>
          <a href="/compras" class="nav-link-custom">Compras</a>
          <a href="/vendas" class="nav-link-custom active">Vendas</a>
          <a href="/produtos" class="nav-link-custom">Produtos</a>
          <a href="/clientes" class="nav-link-custom">Clientes</a>
          <a href="/fornecedores" class="nav-link-custom">Fornecedores</a>
          <a href="/relatorios" class="nav-link-custom">Relat√≥rios</a>
        </div>
      </div>
      <div class="d-none d-lg-block"><a href="/login/logout" class="btn btn-sm btn-outline-danger rounded-pill px-3">Sair ‚ûî</a></div>
    </div>
  </nav>

  <div class="container pt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h2 class="mb-0 fw-bold text-white">Ponto de Venda (PDV)</h2>
        <p class="text-white text-opacity-50 small mb-0">Registre sa√≠das e emita comprovantes</p>
      </div>
      <span class="badge bg-white bg-opacity-10 text-white px-3 py-2 rounded-pill border border-secondary border-opacity-25">
        Hoje: <%= new Date().toLocaleDateString() %>
      </span>
    </div>

    <% if (erro) { %> <div class="alert alert-danger rounded-4 mb-4 text-center border-0 bg-danger bg-opacity-25 text-white"><%= erro %></div> <% } %>
    <% if (locals.sucesso) { %> <div class="alert alert-success rounded-4 mb-4 text-center border-0 bg-success bg-opacity-25 text-white fw-bold">‚úÖ <%= sucesso %></div> <% } %>

    <div class="row g-4">
      <div class="col-lg-4">
        <div class="card-panel h-100 bg-grad-dark" style="border: 1px solid rgba(255,255,255,0.05);">
          <div class="d-flex align-items-center gap-2 mb-4" style="color: #fb923c;">
            <span class="fs-5">üõí</span> <h5 class="mb-0 fw-bold">Nova Venda</h5>
          </div>
          <form action="/vendas/add" method="POST" id="formVenda">
            <div class="mb-3">
              <label class="form-label">Cliente</label>
              <select name="idCliente" class="form-select text-white fw-bold" required>
                <option value="" disabled selected>Selecione...</option>
                <% clientes.forEach(c => { %>
                  <option value="<%= c.idCliente %>"><%= c.nome %></option>
                <% }) %>
              </select>
            </div>
            <div class="mb-4">
              <label class="form-label">Pagamento</label>
              <select name="formaPagamento" class="form-select text-white" required>
                <option value="Dinheiro">Dinheiro</option>
                <option value="Pix">Pix</option>
                <option value="Cart√£o Cr√©dito">Cart√£o de Cr√©dito</option>
                <option value="Cart√£o D√©bito">Cart√£o de D√©bito</option>
              </select>
            </div>
            <hr class="border-secondary opacity-25 my-4">
            <h6 class="text-white mb-3 opacity-75">Adicionar Produtos</h6>
            <div class="mb-3">
              <select id="selProduto" class="form-select">
                <option value="" disabled selected>Pesquisar item...</option>
                <% produtos.forEach(p => { %>
                  <option value="<%= p.numProduto %>" data-preco="<%= p.precoVenda %>" data-nome="<%= p.nomeProduto %>">
                    <%= p.nomeProduto %> (R$ <%= p.precoVenda.toFixed(2) %>)
                  </option>
                <% }) %>
              </select>
            </div>
            <div class="row g-2 mb-3">
              <div class="col-4"><input type="number" id="qtdProduto" class="form-control text-center" value="1" min="1"></div>
              <div class="col-8"><button type="button" class="btn btn-outline-light w-100" onclick="adicionarAoCarrinho()">+ Adicionar</button></div>
            </div>
            <input type="hidden" name="itensCarrinho" id="inputItensCarrinho">
            <div class="mt-auto pt-3 border-top border-secondary border-opacity-10">
              <button class="btn w-100 py-3 shadow-lg btn-orange">‚úÖ Finalizar Venda</button>
            </div>
          </form>
        </div>
      </div>

      <div class="col-lg-8">
        <div class="card-panel h-100 d-flex flex-column p-0 overflow-hidden">
          <div class="p-4 bg-dark bg-opacity-25 border-bottom border-secondary border-opacity-10">
            <h5 class="text-white mb-3 fw-bold">üõçÔ∏è Carrinho de Compras</h5>
            <div class="cart-table-container">
              <table class="table table-hover align-middle mb-0">
                <thead class="text-white sticky-top" style="background: #151725;">
                  <tr><th>Produto</th><th class="text-center">Qtd</th><th class="text-end">Unit.</th><th class="text-end">Total</th><th class="text-end"></th></tr>
                </thead>
                <tbody id="listaCarrinho" class="border-top-0">
                  <tr><td colspan="5" class="text-center text-white py-4 small">Carrinho vazio.</td></tr>
                </tbody>
              </table>
            </div>
            <div class="mt-3 p-3 rounded-4" style="background: #12141e; border: 1px solid rgba(255,255,255,0.05);">
              <div class="row align-items-center">
                <div class="col-md-6 border-end border-secondary border-opacity-10">
                  <label class="form-label text-orange fw-bold small mb-1">Desconto (R$)</label>
                  <div class="input-group input-group-sm">
                    <span class="input-group-text bg-dark border-secondary border-opacity-25 text-white">- R$</span>
                    <input type="number" id="inputDesconto" form="formVenda" name="desconto" class="form-control" placeholder="0.00" step="0.01" oninput="recalcularTotal()">
                  </div>
                </div>
                <div class="col-md-6 text-end">
                  <span class="text-white small text-uppercase fw-bold opacity-75 d-block">Total a Pagar</span>
                  <h2 class="mb-0 fw-bold text-white" id="totalVendaDisplay">R$ 0.00</h2>
                  <small class="text-white" id="subtotalDisplay">Subtotal: R$ 0.00</small>
                </div>
              </div>
            </div>
          </div>

          <div class="p-4 flex-grow-1 bg-dark bg-opacity-10">
            <h6 class="text-white mb-3 opacity-50 text-uppercase fw-bold small">Vendas Recentes</h6>
            <div class="table-responsive">
              <table class="table table-hover align-middle table-sm">
                <thead>
                  <tr><th>Data</th><th>Cliente</th><th>Pgto</th><th class="text-end">Valor</th><th class="text-end">A√ß√£o</th></tr>
                </thead>
                <tbody>
                  <% historico.slice(0, 5).forEach(v => { %>
                    <tr>
                      <td class="text-white opacity-75"><%= new Date(v.dataVenda).toLocaleDateString() %></td>
                      <td class="fw-bold text-white"><%= v.nomeCliente %></td>
                      <td class="text-white opacity-50 small"><%= v.formaPagamento %></td>
                      <td class="text-end text-success fw-bold">R$ <%= v.valorTotal.toFixed(2) %></td>
                      <td class="text-end">
                        <button onclick="imprimirComprovante(<%= v.idVenda %>)" class="btn btn-sm btn-outline-light rounded-pill px-3 py-0" style="font-size: 0.8rem;">
                          üñ®Ô∏è Cupom
                        </button>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id="area-comprovante">
    <div class="cupom-header">
      <h3 style="margin:0; font-size:16px;">Carrapicho Jardinagem</h3>
      <p style="margin:5px 0;">Rondon - PR | (44) 99927-0171</p>
      <p style="font-size:10px;">CNPJ: 32.665.550/0001-00</p>
      <hr style="border-top:1px dashed #000;">
      <h4 style="margin:5px 0; font-size:14px;">COMPROVANTE DE VENDA</h4>
      <p style="margin:0;" id="cupom-id">#000</p>
      <p style="margin:0;" id="cupom-data">00/00/0000</p>
    </div>
    
    <div style="margin-bottom:10px; font-size:12px;">
      <strong>Cliente:</strong> <span id="cupom-cliente">Nome</span><br>
      <strong>Pagamento:</strong> <span id="cupom-pgto">Dinheiro</span>
    </div>

    <table class="cupom-table">
      <thead>
        <tr><th style="width:10%">Qtd</th> <th>Item</th> <th style="text-align:right;">R$</th></tr>
      </thead>
      <tbody id="cupom-itens"></tbody>
    </table>

    <div class="cupom-total">
      <p style="margin:2px 0;">Subtotal: R$ <span id="cupom-subtotal">0.00</span></p>
      <p style="margin:2px 0;">Desconto: - R$ <span id="cupom-desconto">0.00</span></p>
      <h3 style="margin:5px 0; font-size:16px;">TOTAL: R$ <span id="cupom-total">0.00</span></h3>
    </div>
    
    <div style="text-align:center; margin-top:20px; font-size:10px;">
      <p>Obrigado pela prefer√™ncia!</p>
      <p>Sistema Plantech</p>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    let carrinho = [];

    // --- CARRINHO ---
    function adicionarAoCarrinho() {
      const sel = document.getElementById('selProduto');
      const qtdInput = document.getElementById('qtdProduto');
      const id = sel.value;
      const nome = sel.options[sel.selectedIndex]?.getAttribute('data-nome');
      const preco = parseFloat(sel.options[sel.selectedIndex]?.getAttribute('data-preco'));
      const qtd = parseInt(qtdInput.value);

      if (!id) { alert("Selecione um produto."); return; }
      if (qtd <= 0 || isNaN(qtd)) { alert("Quantidade inv√°lida."); return; }

      carrinho.push({ id, nome, qtd, preco });
      renderCarrinho();
      sel.value = ""; qtdInput.value = "1"; sel.focus();
    }

    function removerItem(index) {
      carrinho.splice(index, 1);
      renderCarrinho();
    }

    function renderCarrinho() {
      const tbody = document.getElementById('listaCarrinho');
      tbody.innerHTML = "";
      if (carrinho.length === 0) tbody.innerHTML = '<tr><td colspan="5" class="text-center text-white py-4 small">Carrinho vazio.</td></tr>';

      carrinho.forEach((item, index) => {
        const subtotal = item.qtd * item.preco;
        const tr = document.createElement('tr');
        tr.innerHTML = `<td class="text-white fw-bold">${item.nome}</td><td class="text-center text-white opacity-75">${item.qtd}</td><td class="text-end text-white opacity-75">R$ ${item.preco.toFixed(2)}</td><td class="text-end text-white fw-bold">R$ ${subtotal.toFixed(2)}</td><td class="text-end"><button type="button" class="btn btn-sm btn-link text-danger text-decoration-none p-0" onclick="removerItem(${index})">‚úï</button></td>`;
        tbody.appendChild(tr);
      });
      recalcularTotal();
      document.getElementById('inputItensCarrinho').value = JSON.stringify(carrinho);
    }

    function recalcularTotal() {
      let subtotal = carrinho.reduce((acc, item) => acc + (item.qtd * item.preco), 0);
      let desconto = parseFloat(document.getElementById('inputDesconto').value) || 0;
      let totalFinal = Math.max(0, subtotal - desconto);
      document.getElementById('subtotalDisplay').innerText = "Subtotal: R$ " + subtotal.toFixed(2);
      document.getElementById('totalVendaDisplay').innerText = "R$ " + totalFinal.toFixed(2);
    }

    document.getElementById('formVenda').onsubmit = function(e) {
      document.getElementById('inputItensCarrinho').value = JSON.stringify(carrinho);
      if (carrinho.length === 0) { alert("Adicione pelo menos um produto!"); e.preventDefault(); return false; }
      return true;
    }

    // --- IMPRESS√ÉO CORRIGIDA (SEM CORTAR) ---
    async function imprimirComprovante(idVenda) {
      try {
        const response = await fetch(`/vendas/comprovante/${idVenda}`);
        const data = await response.json();
        
        if(data.error) return alert("Erro: " + data.error);

        const { venda, itens } = data;

        // Preenche dados
        document.getElementById('cupom-id').innerText = "#" + venda.idVenda;
        document.getElementById('cupom-data').innerText = new Date(venda.dataVenda).toLocaleString();
        document.getElementById('cupom-cliente').innerText = venda.nomeCliente;
        document.getElementById('cupom-pgto').innerText = venda.formaPagamento;
        document.getElementById('cupom-subtotal').innerText = (venda.subtotal || venda.valorTotal).toFixed(2);
        document.getElementById('cupom-desconto').innerText = (venda.desconto || 0).toFixed(2);
        document.getElementById('cupom-total').innerText = venda.valorTotal.toFixed(2);

        const tbody = document.getElementById('cupom-itens');
        tbody.innerHTML = "";
        itens.forEach(item => {
          tbody.innerHTML += `<tr><td>${item.quantidade}x</td><td>${item.nomeProduto}</td><td style="text-align:right;">${(item.quantidade * item.precoUnitario).toFixed(2)}</td></tr>`;
        });

        // Mostra elemento oculto
        const elemento = document.getElementById('area-comprovante');
        elemento.style.display = 'block';

        // CONFIGURA√á√ÉO DO PDF (Bobina Longa para n√£o cortar)
        const opt = {
          margin: 0,
          filename: `Cupom_Venda_${venda.idVenda}.pdf`,
          image: { type: 'jpeg', quality: 0.98 },
          html2canvas: { scale: 2, scrollY: 0 },
          jsPDF: { unit: 'mm', format: [80, 2000], orientation: 'portrait' } // 2 Metros de altura (Bobina Infinita)
        };

        await html2pdf().set(opt).from(elemento).save();
        
        elemento.style.display = 'none'; // Esconde

      } catch (err) {
        console.error(err);
        alert("Erro ao imprimir.");
      }
    }
  </script>

</body>
</html>