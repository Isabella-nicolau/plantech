<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Vendas - Plantech</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
  <style>
    /* Ajustes espec√≠ficos para o tema Dark */
    .form-control, .form-select {
      background-color: #12141e !important;
      border: 1px solid rgba(255, 255, 255, 0.1) !important;
      color: #ffffff !important;
    }
    .form-control:focus, .form-select:focus {
      border-color: #f97316 !important; /* Laranja para Vendas */
      box-shadow: 0 0 0 2px rgba(249, 115, 22, 0.2) !important;
    }
    .form-label {
      color: #e0e0e0;
      font-weight: 500;
      font-size: 0.9rem;
    }
    
    /* Scroll na tabela do carrinho */
    .cart-table-container {
      max-height: 250px;
      overflow-y: auto;
    }
    .cart-table-container::-webkit-scrollbar { width: 6px; }
    .cart-table-container::-webkit-scrollbar-thumb { background: rgba(255,255,255,0.1); border-radius: 10px; }

    /* Bot√£o Laranja Personalizado */
    .btn-orange {
      background-color: #f97316;
      color: white;
      border: none;
      border-radius: 50px;
      font-weight: 700;
      transition: 0.3s;
    }
    .btn-orange:hover {
      background-color: #ea580c;
      color: white;
      transform: scale(1.02);
    }
  </style>
</head>
<body>

  <nav class="navbar navbar-expand-lg border-bottom border-secondary border-opacity-10">
    <div class="container">
      <a class="navbar-brand" href="/dashboard">
        <span style="font-size: 1.5rem;">üå±</span> Plantech
      </a>
      <button class="navbar-toggler bg-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
        <div class="nav-pills-custom">
          <a href="/dashboard" class="nav-link-custom">Dashboard</a>
          <a href="/compras" class="nav-link-custom">Compras</a>
          <a href="/vendas" class="nav-link-custom active">Vendas</a> <a href="/produtos" class="nav-link-custom">Produtos</a>
          <a href="/clientes" class="nav-link-custom">Clientes</a>
          <a href="/fornecedores" class="nav-link-custom">Fornecedores</a>
          <a href="/relatorios" class="nav-link-custom">Relat√≥rios</a>
        </div>
      </div>

      <div class="d-none d-lg-block">
        <a href="/login/logout" class="btn btn-sm btn-outline-danger rounded-pill px-3">Sair ‚ûî</a>
      </div>
    </div>
  </nav>

  <div class="container pt-4">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h2 class="mb-0 fw-bold text-white">Ponto de Venda (PDV)</h2>
        <p class="text-white text-opacity-50 small mb-0">Registre sa√≠das e atualize o estoque em tempo real</p>
      </div>
      <span class="badge bg-white bg-opacity-10 text-white px-3 py-2 rounded-pill border border-secondary border-opacity-25">
        Hoje: <%= new Date().toLocaleDateString() %>
      </span>
    </div>

    <% if (erro) { %>
      <div class="alert alert-danger rounded-4 mb-4 text-center border-0 bg-danger bg-opacity-25 text-white"><%= erro %></div>
    <% } %>

    <div class="row g-4">
      
      <div class="col-lg-4">
        <div class="card-panel h-100 bg-grad-dark" style="border: 1px solid rgba(255,255,255,0.05);">
          <div class="d-flex align-items-center gap-2 mb-4" style="color: #fb923c;">
            <span class="fs-5">üõí</span> 
            <h5 class="mb-0 fw-bold">Nova Venda</h5>
          </div>
          
          <form action="/vendas/add" method="POST" id="formVenda">
            
            <div class="mb-3">
              <label class="form-label">Cliente</label>
              <select name="idCliente" class="form-select text-white fw-bold" required>
                <option value="" disabled selected>Selecione...</option>
                <% clientes.forEach(c => { %>
                  <option value="<%= c.idCliente %>"><%= c.nome %></option>
                <% }) %>
              </select>
            </div>

            <div class="mb-4">
              <label class="form-label">Forma de Pagamento</label>
              <select name="formaPagamento" class="form-select text-white" required>
                <option value="Dinheiro">Dinheiro</option>
                <option value="Pix">Pix</option>
                <option value="Cart√£o Cr√©dito">Cart√£o de Cr√©dito</option>
                <option value="Cart√£o D√©bito">Cart√£o de D√©bito</option>
                <option value="Boleto">Boleto Banc√°rio</option>
              </select>
            </div>

            <hr class="border-secondary opacity-25 my-4">

            <h6 class="text-white mb-3 opacity-75">Adicionar Produtos</h6>
            
            <div class="mb-3">
              <select id="selProduto" class="form-select">
                <option value="" disabled selected>Pesquisar item...</option>
                <% produtos.forEach(p => { %>
                  <option value="<%= p.numProduto %>" 
                          data-preco="<%= p.precoVenda %>" 
                          data-nome="<%= p.nomeProduto %>">
                    <%= p.nomeProduto %> (R$ <%= p.precoVenda.toFixed(2) %>)
                  </option>
                <% }) %>
              </select>
            </div>

            <div class="row g-2 mb-3">
              <div class="col-4">
                <input type="number" id="qtdProduto" class="form-control text-center" value="1" min="1" placeholder="Qtd">
              </div>
              <div class="col-8">
                <button type="button" class="btn btn-outline-light w-100" onclick="adicionarAoCarrinho()">
                  + Adicionar
                </button>
              </div>
            </div>

            <input type="hidden" name="itensCarrinho" id="inputItensCarrinho">

            <div class="mt-auto pt-3 border-top border-secondary border-opacity-10">
              <button class="btn w-100 py-3 shadow-lg btn-orange">
                ‚úÖ Finalizar Venda
              </button>
            </div>

          </form>
        </div>
      </div>

      <div class="col-lg-8">
        <div class="card-panel h-100 d-flex flex-column p-0 overflow-hidden">
          
          <div class="p-4 bg-dark bg-opacity-25 border-bottom border-secondary border-opacity-10">
            <h5 class="text-white mb-3 fw-bold">üõçÔ∏è Carrinho de Compras</h5>
            <div class="cart-table-container">
              <table class="table table-hover align-middle mb-0">
                <thead class="text-white sticky-top" style="background: #151725;">
                  <tr>
                    <th>Produto</th>
                    <th class="text-center">Qtd</th>
                    <th class="text-end">Unit.</th>
                    <th class="text-end">Total</th>
                    <th class="text-end"></th>
                  </tr>
                </thead>
                <tbody id="listaCarrinho" class="border-top-0">
                  <tr><td colspan="5" class="text-center text-muted py-4 small">Carrinho vazio. Adicione itens.</td></tr>
                </tbody>
              </table>
            </div>
            
            <div class="mt-3 p-3 rounded-4 d-flex justify-content-between align-items-center" 
                 style="background: linear-gradient(135deg, #ea580c, #c2410c); border: 1px solid rgba(249,115,22,0.3);">
              <span class="text-white small text-uppercase fw-bold opacity-75">Total a Receber</span>
              <h3 class="mb-0 fw-bold text-white" id="totalVendaDisplay">R$ 0.00</h3>
            </div>
          </div>

          <div class="p-4 flex-grow-1 bg-dark bg-opacity-10">
            <h6 class="text-white mb-3 opacity-50 text-uppercase fw-bold small">Vendas Recentes</h6>
            <div class="table-responsive">
              <table class="table table-hover align-middle table-sm">
                <thead>
                  <tr>
                    <th>Data</th>
                    <th>Cliente</th>
                    <th>Pagamento</th>
                    <th class="text-end">Valor</th>
                  </tr>
                </thead>
                <tbody>
                  <% historico.slice(0, 5).forEach(v => { %>
                    <tr>
                      <td class="text-white opacity-75"><%= new Date(v.dataVenda).toLocaleDateString() %></td>
                      <td class="fw-bold text-white"><%= v.nomeCliente %></td>
                      <td class="text-white opacity-50 small"><%= v.formaPagamento %></td>
                      <td class="text-end text-success fw-bold">R$ <%= v.valorTotal.toFixed(2) %></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>

        </div>
      </div>

    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    let carrinho = [];

    function adicionarAoCarrinho() {
      const sel = document.getElementById('selProduto');
      const qtdInput = document.getElementById('qtdProduto');
      
      const id = sel.value;
      const nome = sel.options[sel.selectedIndex]?.getAttribute('data-nome');
      const preco = parseFloat(sel.options[sel.selectedIndex]?.getAttribute('data-preco'));
      const qtd = parseInt(qtdInput.value);

      if (!id) {
        alert("Selecione um produto.");
        return;
      }
      if (qtd <= 0 || isNaN(qtd)) {
        alert("Quantidade inv√°lida.");
        return;
      }

      carrinho.push({ id, nome, qtd, preco });
      atualizarTabela();
      
      // Reset campos
      sel.value = "";
      qtdInput.value = "1";
      sel.focus();
    }

    function removerItem(index) {
      carrinho.splice(index, 1);
      atualizarTabela();
    }

    function atualizarTabela() {
      const tbody = document.getElementById('listaCarrinho');
      const totalDisplay = document.getElementById('totalVendaDisplay');
      const inputHidden = document.getElementById('inputItensCarrinho');
      
      tbody.innerHTML = "";
      let totalGeral = 0;

      if (carrinho.length === 0) {
        tbody.innerHTML = '<tr><td colspan="5" class="text-center text-muted py-4 small">Carrinho vazio. Adicione itens.</td></tr>';
      }

      carrinho.forEach((item, index) => {
        const subtotal = item.qtd * item.preco;
        totalGeral += subtotal;

        const tr = document.createElement('tr');
        tr.innerHTML = `
          <td class="text-white fw-bold">${item.nome}</td>
          <td class="text-center text-white opacity-75">${item.qtd}</td>
          <td class="text-end text-white opacity-75">R$ ${item.preco.toFixed(2)}</td>
          <td class="text-end text-white fw-bold">R$ ${subtotal.toFixed(2)}</td>
          <td class="text-end"><button type="button" class="btn btn-sm btn-link text-danger text-decoration-none p-0" onclick="removerItem(${index})">‚úï</button></td>
        `;
        tbody.appendChild(tr);
      });

      totalDisplay.innerText = "R$ " + totalGeral.toFixed(2);
      inputHidden.value = JSON.stringify(carrinho);
    }

    document.getElementById('formVenda').onsubmit = function() {
      if(carrinho.length === 0) {
        alert("Adicione pelo menos um produto para vender!");
        return false;
      }
      return true;
    }
  </script>

</body>
</html>