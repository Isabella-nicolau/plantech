            </tr>
          </thead>
          <tbody class="border-top-0">
            <% lista.forEach(item => { %>
              <tr>
                <td class="ps-4 text-white opacity-75">
                  <%= new Date(item.dataVenda).toLocaleDateString() %>
                </td>
                <td class="fw-bold text-white">
                  <%= item.nomeProduto %>
                </td>
                <td>
                  <span class="badge bg-secondary bg-opacity-25 text-white border border-secondary border-opacity-25">
                    <%= item.categoria %>
                  </span>
                </td>
                <td class="text-white opacity-75">
                  <%= item.nomeCliente %>
                </td>
                <td class="text-center pe-4">
