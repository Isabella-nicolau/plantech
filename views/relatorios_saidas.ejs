<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Sa√≠das - Plantech</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
  
  <style>
    /* --- ESTILOS DO RELAT√ìRIO OCULTO (PDF) --- */
    #relatorio-pdf {
      display: none; /* Invis√≠vel na tela */
      background-color: #ffffff !important; /* For√ßa fundo branco */
      color: #000000 !important; /* For√ßa texto preto */
      padding: 40px;
      font-family: 'Helvetica', 'Arial', sans-serif;
      font-size: 12px;
      width: 100%;
      max-width: 800px; /* Largura fixa para A4 */
      margin: 0 auto;
    }
    
    /* For√ßar cores pretas em todos os elementos do PDF */
    #relatorio-pdf h1, #relatorio-pdf h2, #relatorio-pdf h3, 
    #relatorio-pdf h4, #relatorio-pdf h5, #relatorio-pdf p, 
    #relatorio-pdf span, #relatorio-pdf td, #relatorio-pdf th {
      color: #000000 !important;
    }

    /* Cabe√ßalho */
    .pdf-header {
      border-bottom: 2px solid #2e7d32;
      padding-bottom: 15px;
      margin-bottom: 20px;
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
    }
    .pdf-title h1 { font-size: 24px; font-weight: bold; color: #2e7d32 !important; margin: 0; }
    .pdf-title h2 { font-size: 14px; margin: 5px 0 0 0; text-transform: uppercase; }
    .pdf-info { text-align: right; font-size: 11px; }

    /* Se√ß√£o de Ranking */
    .pdf-section-title { 
      background-color: #eee; 
      padding: 8px; 
      font-weight: bold; 
      border-left: 5px solid #f97316; 
      margin: 20px 0 10px 0; 
      font-size: 13px;
    }
    
    .pdf-ranking-grid {
      display: flex;
      gap: 10px;
      margin-bottom: 20px;
    }
    .ranking-box {
      border: 1px solid #ddd;
      background: #fdfdfd;
      padding: 10px;
      flex: 1;
      text-align: center;
      border-radius: 5px;
    }
    .ranking-num { font-size: 18px; font-weight: bold; color: #f97316 !important; }
    .ranking-name { font-size: 11px; margin-top: 5px; display: block; }

    /* Tabela */
    .pdf-table { width: 100%; border-collapse: collapse; margin-bottom: 20px; }
    .pdf-table th { 
      background-color: #f0f0f0; 
      font-weight: bold; 
      text-transform: uppercase; 
      padding: 8px; 
      border: 1px solid #ccc; 
      font-size: 10px; 
    }
    .pdf-table td { 
      padding: 8px; 
      border: 1px solid #ddd; 
      font-size: 11px; 
    }
    .pdf-table tr:nth-child(even) { background-color: #f9f9f9; }
    
    .pdf-footer { 
      margin-top: 30px; 
      border-top: 1px solid #ccc; 
      padding-top: 10px; 
      display: flex; 
      justify-content: space-between; 
      font-size: 10px; 
    }
    
    /* Estilos Tela */
    .form-control { background-color: #12141e !important; border: 1px solid rgba(255, 255, 255, 0.1) !important; color: white !important; }
    @media print { .no-print { display: none !important; } }
  </style>
</head>
<body>

  <nav class="navbar navbar-expand-lg border-bottom border-secondary border-opacity-10 no-print" data-html2canvas-ignore="true">
    <div class="container">
      <a class="navbar-brand" href="/dashboard"><span style="font-size: 1.5rem;">üå±</span> Plantech</a>
      <button class="navbar-toggler bg-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"><span class="navbar-toggler-icon"></span></button>
      <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
        <div class="nav-pills-custom">
          <a href="/dashboard" class="nav-link-custom">Dashboard</a>
          <a href="/compras" class="nav-link-custom">Compras</a>
          <a href="/vendas" class="nav-link-custom">Vendas</a>
          <a href="/produtos" class="nav-link-custom">Produtos</a>
          <a href="/clientes" class="nav-link-custom">Clientes</a>
          <a href="/fornecedores" class="nav-link-custom">Fornecedores</a>
          <a href="/relatorios" class="nav-link-custom active">Relat√≥rios</a>
        </div>
      </div>
      <div class="d-none d-lg-block"><a href="/login/logout" class="btn btn-sm btn-outline-danger rounded-pill px-3">Sair ‚ûî</a></div>
    </div>
  </nav>

  <div class="container pt-4">
    
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-5 no-print" data-html2canvas-ignore="true">
      <div class="mb-3 mb-md-0">
        <h2 class="mb-0 fw-bold text-white">Relat√≥rios Gerenciais</h2>
        <p class="text-white text-opacity-50 small mb-0">An√°lise de fluxo e consumo</p>
      </div>
      <div class="nav-pills-custom">
        <a href="/relatorios" class="nav-link-custom">Vendas</a>
        <a href="/relatorios/saidas" class="nav-link-custom active" style="background-color: var(--accent-lime); color: #121212;">Sa√≠das</a>
        <a href="/relatorios/estoque" class="nav-link-custom">Estoque</a>
        <a href="/relatorios/financeiro" class="nav-link-custom">Financeiro</a>
      </div>
    </div>

    <div class="card-panel mb-5 no-print" style="background: rgba(255,255,255,0.02);" data-html2canvas-ignore="true">
      <form action="/relatorios/saidas" method="GET" class="row g-3 align-items-end">
        <div class="col-md-5">
          <label class="form-label text-white">Data In√≠cio</label>
          <input type="date" name="dataInicio" class="form-control" value="<%= query.dataInicio %>">
        </div>
        <div class="col-md-5">
          <label class="form-label text-white">Data Fim</label>
          <input type="date" name="dataFim" class="form-control" value="<%= query.dataFim %>">
        </div>
        <div class="col-md-2">
          <button class="btn btn-primary w-100 fw-bold shadow-lg" style="height: 46px;">Filtrar</button>
        </div>
      </form>
    </div>

    <div class="mb-5 no-print">
      <h5 class="text-white mb-4 fw-bold d-flex align-items-center gap-2"><span class="fs-5">üî•</span> Top 5 Mais Vendidos</h5>
      <div class="row g-3">
        <% ranking.forEach((item, index) => { %>
          <div class="col">
            <div class="stat-card h-100 text-center p-3 border border-secondary border-opacity-25" style="background: var(--bg-card); min-height: auto;">
              <div class="mb-2"><span class="badge bg-grad-orange rounded-circle d-flex align-items-center justify-content-center mx-auto" style="width: 30px; height: 30px;"><%= index + 1 %>¬∫</span></div>
              <h3 class="fw-bold text-white mb-1"><%= item.totalQtd %></h3>
              <small class="text-white d-block text-truncate"><%= item.nomeProduto %></small>
            </div>
          </div>
        <% }) %>
        <% if(ranking.length === 0) { %>
          <div class="col-12"><div class="p-4 text-center text-white border border-secondary border-opacity-10 rounded-4">Sem dados de tend√™ncia.</div></div>
        <% } %>
      </div>
    </div>

    <div class="card-panel h-100 p-0 overflow-hidden border border-secondary border-opacity-25 no-print">
      <div class="p-4 border-bottom border-secondary border-opacity-10 bg-dark bg-opacity-25 d-flex justify-content-between align-items-center">
        <h5 class="text-white mb-0 fw-bold">üìã Registro de Sa√≠das</h5>
        <button onclick="baixarPDFSaidas()" class="btn btn-sm btn-outline-light rounded-pill px-3 shadow-lg" data-html2canvas-ignore="true">üíæ Baixar Relat√≥rio Oficial</button>
      </div>
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="bg-dark text-white">
            <tr>
              <th class="ps-4" style="background: #151725;">Data</th>
              <th style="background: #151725;">Produto</th>
              <th style="background: #151725;">Categoria</th>
              <th style="background: #151725;">Cliente</th>
              <th class="text-center pe-4" style="background: #151725;">Baixa</th>
            </tr>
          </thead>
          <tbody class="border-top-0">
            <% lista.forEach(item => { %>
              <tr>
                <td class="ps-4 text-white opacity-75"><%= new Date(item.dataVenda).toLocaleDateString() %></td>
                <td class="fw-bold text-white"><%= item.nomeProduto %></td>
                <td><span class="badge bg-secondary bg-opacity-25 text-white border border-secondary border-opacity-25"><%= item.categoria %></span></td>
                <td class="text-white opacity-75"><%= item.nomeCliente %></td>
                <td class="text-center pe-4"><span class="badge bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25 px-3">- <%= item.quantidade %></span></td>
              </tr>
            <% }) %>
            <% if (lista.length === 0) { %>
              <tr><td colspan="5" class="text-center py-5 text-white">Nenhuma sa√≠da registrada.</td></tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
    
    <div class="text-center mt-4 text-white small opacity-50 no-print">
      Relat√≥rio gerado em <%= new Date().toLocaleDateString() %> √†s <%= new Date().toLocaleTimeString() %>
    </div>

  </div>

  <div id="relatorio-pdf">
    
    <div class="pdf-header">
      <div class="pdf-title">
        <h1>Plantech ERP</h1>
        <h2>Relat√≥rio de Baixa de Produtos (Sa√≠das)</h2>
      </div>
      <div class="pdf-info">
        <p><strong>Carrapicho Jardinagem</strong></p>
        <p>CNPJ: 32.665.550/0001-00</p>
        <p>Per√≠odo: <%= query.dataInicio || 'In√≠cio' %> a <%= query.dataFim || 'Hoje' %></p>
        <p>Emiss√£o: <%= new Date().toLocaleString() %></p>
      </div>
    </div>

    <% if (ranking.length > 0) { %>
      <div class="pdf-section-title">Destaques de Consumo</div>
      <div class="pdf-ranking-grid">
        <% ranking.slice(0, 5).forEach((item, index) => { %>
          <div class="ranking-box">
            <div style="font-size: 10px; margin-bottom: 5px;"><%= index + 1 %>¬∫ Lugar</div>
            <div class="ranking-num"><%= item.totalQtd %> un.</div>
            <span class="ranking-name"><%= item.nomeProduto %></span>
          </div>
        <% }) %>
      </div>
    <% } %>

    <div class="pdf-section-title">Detalhamento das Baixas</div>
    <table class="pdf-table">
      <thead>
        <tr>
          <th style="width: 15%;">Data</th>
          <th style="width: 35%;">Produto</th>
          <th style="width: 15%;">Categoria</th>
          <th style="width: 25%;">Cliente</th>
          <th style="width: 10%; text-align: center;">Baixa</th>
        </tr>
      </thead>
      <tbody>
        <% if (lista && lista.length > 0) { %>
          <% lista.forEach(item => { %>
            <tr>
              <td><%= new Date(item.dataVenda).toLocaleDateString() %></td>
              <td><strong><%= item.nomeProduto %></strong></td>
              <td><%= item.categoria %></td>
              <td><%= item.nomeCliente %></td>
              <td style="text-align: center; font-weight: bold; color: #d32f2f;">- <%= item.quantidade %></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr><td colspan="5" style="text-align: center; padding: 20px;">Nenhum dado para exibir neste per√≠odo.</td></tr>
        <% } %>
      </tbody>
    </table>

    <div class="pdf-footer">
      <span>Sistema Plantech v2.5</span>
      <span>Relat√≥rio de controle interno de fluxo.</span>
    </div>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  
  <script>
    function baixarPDFSaidas() {
      const elemento = document.getElementById('relatorio-pdf');
      
      // O pulo do gato: Exibir, Gerar, Esconder
      elemento.style.display = 'block';

      const opt = {
        margin: [10, 10, 15, 10],
        filename: 'Relatorio_Saidas_Plantech.pdf',
        image: { type: 'jpeg', quality: 0.98 },
        html2canvas: { scale: 2, scrollY: 0 }, // scrollY: 0 corrige o problema do PDF em branco
        jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' }
      };

      html2pdf().set(opt).from(elemento).save().then(() => {
        elemento.style.display = 'none'; // Esconde imediatamente ap√≥s salvar
      });
    }
  </script>

</body>
</html>