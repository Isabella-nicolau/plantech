<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <title>Produtos - Plantech</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

  <nav class="navbar navbar-dark bg-dark p-3">
    <span class="navbar-brand">Plantech - Produtos</span>
    <a href="/dashboard" class="btn btn-light ms-3">Voltar</a>
  </nav>

  <div class="container mt-4">

    <h3>Cadastrar Produto</h3>

    <form action="/produtos/add" method="POST" class="row g-3">

      <div class="col-md-6">
        <label class="form-label">Nome do Produto</label>
        <input type="text" name="nomeProduto" class="form-control" required>
      </div>

      <div class="col-md-2">
        <label class="form-label">Corredor</label>
        <input type="number" name="numCorredor" class="form-control" required>
      </div>

      <div class="col-md-2">
        <label class="form-label">Prateleira</label>
        <input type="number" name="numPrateleira" class="form-control" required>
      </div>

      <div class="col-md-2">
        <label class="form-label">Gaveta</label>
        <input type="number" name="numGaveta" class="form-control" required>
      </div>

      <div class="col-md-12">
        <button class="btn btn-success mt-3">Salvar Produto</button>
      </div>

    </form>

    <hr class="my-4">

    <h3>Produtos Cadastrados</h3>

    <table class="table table-striped table-bordered mt-3">
      <thead class="table-dark">
        <tr>
          <th>Número</th>
          <th>Nome</th>
          <th>Corredor</th>
          <th>Prateleira</th>
          <th>Gaveta</th>
          <th>Ação</th>
        </tr>
      </thead>

      <tbody>
        <% lista.forEach(item => { %>
          <tr>
            <td><%= item.numProduto %></td>
            <td><%= item.nomeProduto %></td>
            <td><%= item.numCorredor %></td>
            <td><%= item.numPrateleira %></td>
            <td><%= item.numGaveta %></td>

            <td>
              <a href="/produtos/delete/<%= item.numProduto %>" class="btn btn-danger btn-sm">
                Excluir
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>

    </table>

  </div>

</body>

</html>
