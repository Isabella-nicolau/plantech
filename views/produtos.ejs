<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Produtos - Plantech</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
  <style>
    /* Ajustes de Contraste e Inputs */
    .form-control, .form-select {
      background-color: #12141e !important;
      border: 1px solid rgba(255, 255, 255, 0.1) !important;
      color: #ffffff !important;
    }
    
    /* Foco padr√£o (Verde Plantech) */
    .form-control:focus, .form-select:focus {
      border-color: var(--accent-lime) !important;
      box-shadow: 0 0 0 2px rgba(204, 243, 129, 0.2) !important;
    }

    /* Valida√ß√£o Visual */
    .was-validated .form-control:invalid, 
    .was-validated .form-select:invalid {
      border-color: #ef4444 !important;
      background-image: none !important;
    }
    .was-validated .form-control:invalid:focus {
      box-shadow: 0 0 0 2px rgba(239, 68, 68, 0.25) !important;
    }

    .form-label {
      color: #e0e0e0;
      font-weight: 500;
      font-size: 0.9rem;
    }
    
    /* Asterisco de Obrigat√≥rio */
    .text-required {
      color: #ef4444; 
      font-weight: bold; 
      margin-left: 3px;
    }

    ::placeholder {
      color: rgba(255, 255, 255, 0.3) !important;
    }
    
    /* Scroll na tabela */
    .table-container {
      max-height: 70vh;
      overflow-y: auto;
    }
    .table-container::-webkit-scrollbar { width: 6px; }
    .table-container::-webkit-scrollbar-thumb { background: rgba(255,255,255,0.1); border-radius: 10px; }

    /* Avatar do Produto (Verde) */
    .avatar-prod {
      width: 45px; height: 45px;
      background-color: #2e7d32;
      color: #fff;
      display: flex; align-items: center; justify-content: center;
      border-radius: 12px;
      font-size: 1.2rem;
    }

    /* Bot√£o de Edi√ß√£o */
    .btn-warning-custom {
      background-color: #f59e0b; color: #000; border: none; border-radius: 50px; font-weight: 700; padding: 10px 25px; transition: 0.3s;
    }
    .btn-warning-custom:hover { background-color: #d97706; color: #fff; }
  </style>
</head>
<body>

  <nav class="navbar navbar-expand-lg border-bottom border-secondary border-opacity-10">
    <div class="container">
      <a class="navbar-brand" href="/dashboard">
        <span style="font-size: 1.5rem;">üå±</span> Plantech
      </a>
      <button class="navbar-toggler bg-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
        <div class="nav-pills-custom">
          <a href="/dashboard" class="nav-link-custom">Dashboard</a>
          <a href="/compras" class="nav-link-custom">Compras</a>
          <a href="/vendas" class="nav-link-custom">Vendas</a>
          <a href="/produtos" class="nav-link-custom active">Produtos</a> <a href="/clientes" class="nav-link-custom">Clientes</a>
          <a href="/fornecedores" class="nav-link-custom">Fornecedores</a>
          <a href="/relatorios" class="nav-link-custom">Relat√≥rios</a>
        </div>
      </div>

      <div class="d-none d-lg-block">
        <a href="/login/logout" class="btn btn-sm btn-outline-danger rounded-pill px-3">Sair ‚ûî</a>
      </div>
    </div>
  </nav>

  <div class="container pt-4">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h2 class="mb-0 fw-bold text-white">Cat√°logo de Produtos</h2>
        <p class="text-white text-opacity-50 small mb-0">Gerencie o invent√°rio e pre√ßos de venda</p>
      </div>
      <div class="d-flex gap-2">
        <button onclick="limparForm()" class="btn btn-outline-light btn-sm rounded-pill px-3">Novo (+)</button>
        <span class="badge bg-white bg-opacity-10 text-white px-3 py-2 rounded-pill border border-secondary border-opacity-25">
          Itens: <%= lista.length %>
        </span>
      </div>
    </div>

    <% if (locals.erro) { %>
      <div class="alert alert-danger rounded-4 mb-4 text-center border-0 bg-danger bg-opacity-25 text-white"><%= erro %></div>
    <% } %>

    <div class="row g-4">
      
      <div class="col-lg-4">
        <div class="card-panel h-100 bg-grad-dark" style="border: 1px solid rgba(255,255,255,0.05);">
          <div class="d-flex align-items-center gap-2 mb-4 text-lime">
            <span class="fs-5">üì¶</span> 
            <h5 class="mb-0 fw-bold" id="formTitle">Novo Item</h5>
          </div>
          
          <form action="/produtos/add" method="POST" class="row g-3 needs-validation" id="formProd" novalidate>
            
            <div class="col-12">
              <label class="form-label">Nome do Produto <span class="text-required">*</span></label>
              <input type="text" name="nomeProduto" id="inputNome" class="form-control" required placeholder="Ex: Adubo NPK 10-10-10">
              <div class="invalid-feedback text-end small" style="color: #ef4444;">Nome √© obrigat√≥rio.</div>
            </div>

            <div class="col-6">
              <label class="form-label">Categoria</label>
              <select name="categoria" id="selCat" class="form-select">
                <option value="" disabled selected>Tipo...</option>
                <option value="Plantas">Plantas</option>
                <option value="Gramas">Gramas</option>
                <option value="Vasos">Vasos</option>
                <option value="Insumos">Insumos</option>
                <option value="Ferramentas">Ferramentas</option>
              </select>
            </div>

            <div class="col-6">
              <label class="form-label">Unidade</label>
              <select name="unidadeMedida" id="selUnd" class="form-select">
                <option value="UN">Unidade</option>
                <option value="M2">m¬≤</option>
                <option value="KG">Kg</option>
                <option value="LT">Litro</option>
                <option value="CX">Caixa</option>
              </select>
            </div>

            <div class="col-6">
              <label class="form-label">Pre√ßo Venda (R$) <span class="text-required">*</span></label>
              <input type="number" step="0.01" name="precoVenda" id="inputPreco" class="form-control" required placeholder="0.00">
              <div class="invalid-feedback text-end small" style="color: #ef4444;">Pre√ßo √© obrigat√≥rio.</div>
            </div>

            <div class="col-6">
              <label class="form-label text-lime">Estoque Inicial <small class="text-muted text-white-50">(Op)</small></label>
              <input type="number" name="estoqueAtual" id="inputEstoque" class="form-control" placeholder="0" min="0">
            </div>

            <div class="col-12">
              <label class="form-label">Descri√ß√£o <small class="text-muted text-white-50">(Op)</small></label>
              <textarea name="descricao" id="inputDesc" class="form-control" rows="2" placeholder="Detalhes t√©cnicos, tamanho, cor..."></textarea>
            </div>

            <div class="col-12 mt-4 d-flex gap-2">
              <button type="submit" class="btn btn-primary w-100 py-3 shadow-lg rounded-pill fw-bold" id="btnSalvar">
                <span class="fs-6">üíæ</span> Adicionar
              </button>
              
              <button type="button" class="btn btn-outline-secondary w-100 py-3 rounded-pill fw-bold" id="btnCancelar" onclick="limparForm()" style="display:none;">
                Cancelar
              </button>
            </div>

          </form>
        </div>
      </div>

      <div class="col-lg-8">
        <div class="card-panel h-100 p-0 overflow-hidden">
          <div class="p-4 border-bottom border-secondary border-opacity-10 bg-dark bg-opacity-25">
            <h5 class="text-white mb-0 fw-bold">üìã Estoque Atual</h5>
          </div>
          
          <div class="table-container p-0">
            <table class="table table-hover align-middle mb-0">
              <thead class="bg-dark text-white sticky-top" style="z-index: 2;">
                <tr>
                  <th class="ps-4" style="background: #151725;">Produto</th>
                  <th style="background: #151725;">Categoria</th>
                  <th style="background: #151725;">Pre√ßo</th>
                  <th style="background: #151725;">Saldo</th>
                  <th class="text-end pe-4" style="background: #151725;">A√ß√£o</th>
                </tr>
              </thead>
              <tbody class="border-top-0">
                <% lista.forEach(p => { %>
                  <tr>
                    <td class="ps-4 py-3">
                      <div class="d-flex align-items-center gap-3">
                        <div class="avatar-prod shadow-sm flex-shrink-0">
                          <%= p.nomeProduto.charAt(0).toUpperCase() %>
                        </div>
                        <div style="line-height: 1.3;">
                          <strong class="text-white d-block"><%= p.nomeProduto %></strong>
                          <small class="text-white text-opacity-50 text-truncate d-block" style="max-width: 200px;">
                            <%= p.descricao || "Sem descri√ß√£o" %>
                          </small>
                        </div>
                      </div>
                    </td>
                    
                    <td>
                      <span class="badge bg-dark border border-secondary border-opacity-25 text-white fw-normal">
                        <%= p.categoria %>
                      </span>
                    </td>
                    
                    <td class="text-lime fw-bold">
                      R$ <%= p.precoVenda.toFixed(2) %>
                    </td>
                    
                    <td>
                      <% if(p.estoqueAtual > 0) { %>
                        <span class="badge bg-success bg-opacity-75 text-white">
                          <%= p.estoqueAtual %> <%= p.unidadeMedida %>
                        </span>
                      <% } else { %>
                        <span class="badge bg-danger bg-opacity-75 text-white">Esgotado</span>
                      <% } %>
                    </td>
                    
                    <td class="text-end pe-4">
                      <button class="btn btn-sm btn-outline-warning rounded-pill px-3 me-1"
                        onclick="editar(this)"
                        data-id="<%= p.numProduto %>"
                        data-nome="<%= p.nomeProduto %>"
                        data-cat="<%= p.categoria %>"
                        data-und="<%= p.unidadeMedida %>"
                        data-preco="<%= p.precoVenda %>"
                        data-estoque="<%= p.estoqueAtual %>"
                        data-desc="<%= p.descricao %>">
                        ‚úèÔ∏è
                      </button>

                      <a href="/produtos/delete/<%= p.numProduto %>" 
                         class="btn btn-sm btn-outline-danger rounded-pill px-3"
                         title="Excluir Produto"
                         onclick="return confirm('Tem certeza? Isso pode afetar hist√≥ricos de vendas.');">
                        üóëÔ∏è
                      </a>
                    </td>
                  </tr>
                <% }) %>
                
                <% if(lista.length === 0) { %>
                  <tr>
                    <td colspan="5" class="text-center py-5">
                      <div class="opacity-25 mb-2" style="font-size: 3rem;">üå±</div>
                      <p class="text-white text-opacity-50">Nenhum produto cadastrado.</p>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    // Valida√ß√£o Visual
    (() => {
      'use strict'
      const forms = document.querySelectorAll('.needs-validation')
      Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
          if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
          }
          form.classList.add('was-validated')
        }, false)
      })
    })()

    // Fun√ß√£o de Editar
    function editar(btn) {
      const d = btn.dataset;
      
      document.getElementById('inputNome').value = d.nome;
      document.getElementById('selCat').value = d.cat;
      document.getElementById('selUnd').value = d.und;
      document.getElementById('inputPreco').value = d.preco;
      document.getElementById('inputEstoque').value = d.estoque;
      document.getElementById('inputDesc').value = d.desc;

      const form = document.getElementById('formProd');
      // Necess√°rio rota de update no backend (ex: /produtos/update/:id)
      form.action = "/produtos/update/" + d.id;
      
      document.getElementById('formTitle').innerText = "‚úèÔ∏è Editando Produto";
      
      const btnSalvar = document.getElementById('btnSalvar');
      btnSalvar.innerHTML = '<span class="fs-6">üíæ</span> Atualizar';
      btnSalvar.classList.remove('btn-primary');
      btnSalvar.classList.add('btn-warning-custom');
      
      document.getElementById('btnCancelar').style.display = "block";
    }

    // Limpar Formul√°rio
    function limparForm() {
      const form = document.getElementById('formProd');
      form.reset();
      form.classList.remove('was-validated');
      form.action = "/produtos/add";
      document.getElementById('formTitle').innerText = "Novo Item";
      
      const btnSalvar = document.getElementById('btnSalvar');
      btnSalvar.innerHTML = '<span class="fs-6">üíæ</span> Adicionar';
      btnSalvar.classList.add('btn-primary');
      btnSalvar.classList.remove('btn-warning-custom');
      
      document.getElementById('btnCancelar').style.display = "none";
    }
  </script>

</body>
</html>