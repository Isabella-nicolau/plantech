<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8"><title>Produtos - Plantech</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <nav class="navbar navbar-dark p-3 mb-4">
    <div class="container">
      <span class="navbar-brand">üå± Plantech ‚Ä¢ Produtos</span>
      <a href="/dashboard" class="btn btn-outline-light btn-sm">Voltar</a>
    </div>
  </nav>

  <div class="container">
    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title mb-3 text-success">Novo Produto</h5>
        <form action="/produtos/add" method="POST" class="row g-3">
          <div class="col-md-6">
            <label>Nome do Produto</label>
            <input type="text" name="nomeProduto" class="form-control" required>
          </div>
          <div class="col-md-3">
            <label>Pre√ßo Venda</label>
            <input type="number" step="0.01" name="precoVenda" class="form-control" required>
          </div>
          <div class="col-md-3">
            <label>Localiza√ß√£o</label>
            <select name="idLocalizacao" class="form-select" required>
              <option value="" disabled selected>Onde guardar?</option>
              <% locais.forEach(l => { %>
                <option value="<%= l.idLocalizacao %>">
                  C:<%= l.numCorredor %> P:<%= l.numPrateleira %> G:<%= l.numGaveta %>
                </option>
              <% }) %>
            </select>
          </div>
          <div class="col-12"><button class="btn btn-success w-100">Cadastrar</button></div>
        </form>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h5 class="card-title text-success">Cat√°logo</h5>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>ID</th><th>Nome</th><th>Localiza√ß√£o</th><th>Pre√ßo</th><th>Estoque</th><th>A√ß√£o</th>
            </tr>
          </thead>
          <tbody>
            <% lista.forEach(p => { %>
              <tr>
                <td><%= p.numProduto %></td>
                <td><%= p.nomeProduto %></td>
                <td>
                  <% if(p.numCorredor) { %>
                    C:<%= p.numCorredor %> P:<%= p.numPrateleira %> G:<%= p.numGaveta %>
                  <% } else { %> - <% } %>
                </td>
                <td>R$ <%= p.precoVenda %></td>
                <td><%= p.estoqueAtual %></td>
                <td><a href="/produtos/delete/<%= p.numProduto %>" class="btn btn-danger btn-sm">Excluir</a></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>