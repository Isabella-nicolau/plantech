<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8"><title>Localidades - Plantech</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <nav class="navbar navbar-dark p-3 mb-4">
    <div class="container">
      <span class="navbar-brand">üå± Plantech ‚Ä¢ Mapa do Almoxarifado</span>
      <a href="/dashboard" class="btn btn-outline-light btn-sm">Voltar</a>
    </div>
  </nav>

  <div class="container">
    <% if (erro) { %><div class="alert alert-danger"><%= erro %></div><% } %>

    <div class="row">
      <div class="col-md-4">
        <div class="card shadow-sm mb-4">
          <div class="card-body">
            <h5 class="card-title text-success mb-3">Nova Posi√ß√£o</h5>
            <form action="/localidades/add" method="POST">
              <div class="mb-2">
                <label class="form-label small fw-bold">Corredor</label>
                <input type="number" name="numCorredor" class="form-control" required placeholder="Ex: 1">
              </div>
              <div class="mb-2">
                <label class="form-label small fw-bold">Prateleira</label>
                <input type="number" name="numPrateleira" class="form-control" required placeholder="Ex: 4">
              </div>
              <div class="mb-2">
                <label class="form-label small fw-bold">Gaveta</label>
                <input type="number" name="numGaveta" class="form-control" required placeholder="Ex: 12">
              </div>
              <div class="mb-3">
                <label class="form-label small fw-bold">Capacidade (Opcional)</label>
                <input type="text" name="capacidade" class="form-control" placeholder="Ex: 50kg ou Pequena">
              </div>
              <button class="btn btn-success w-100">Criar Local</button>
            </form>
          </div>
        </div>
      </div>

      <div class="col-md-8">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title text-success mb-3">Endere√ßos F√≠sicos</h5>
            <table class="table table-hover align-middle">
              <thead>
                <tr>
                  <th>Visualiza√ß√£o</th>
                  <th>Capacidade</th>
                  <th class="text-end">A√ß√£o</th>
                </tr>
              </thead>
              <tbody>
                <% lista.forEach(item => { %>
                  <tr>
                    <td>
                      <span class="badge bg-dark fs-6">C: <%= item.numCorredor %></span>
                      <i class="mx-1 text-muted">/</i>
                      <span class="badge bg-secondary fs-6">P: <%= item.numPrateleira %></span>
                      <i class="mx-1 text-muted">/</i>
                      <span class="badge bg-success fs-6">G: <%= item.numGaveta %></span>
                    </td>
                    <td class="text-muted"><%= item.capacidade || "N/A" %></td>
                    <td class="text-end">
                      <a href="/localidades/delete/<%= item.idLocalizacao %>" class="btn btn-outline-danger btn-sm" onclick="return confirm('Tem certeza?');">
                        Remover
                      </a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
            <% if (lista.length === 0) { %>
              <div class="text-center text-muted mt-4">Nenhuma localiza√ß√£o cadastrada.</div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>