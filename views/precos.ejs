<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <title>Relação de Preços - Plantech</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

  <nav class="navbar navbar-dark bg-dark p-3 mb-4">
    <div class="container-fluid">
      <span class="navbar-brand">Plantech • Relação de Preços</span>
      <a href="/dashboard" class="btn btn-outline-light btn-sm">Voltar</a>
    </div>
  </nav>

  <div class="container">

    <% if (erro) { %>
      <div class="alert alert-danger"><%= erro %></div>
    <% } %>

    <div class="card shadow-sm mb-4">
      <div class="card-body">
        <h4 class="card-title mb-3">Cadastrar Preço</h4>

        <form action="/precos/add" method="POST" class="row g-3">

          <div class="col-md-4">
            <label class="form-label">Produto</label>
            <input type="text" name="produto" class="form-control" required>
          </div>

          <div class="col-md-4">
            <label class="form-label">Fornecedor</label>
            <input type="text" name="fornecedor" class="form-control" required>
          </div>

          <div class="col-md-4">
            <label class="form-label">Preço</label>
            <input type="number" step="0.01" name="preco" class="form-control" required>
          </div>

          <button class="btn btn-success w-100 mt-3">Salvar</button>

        </form>
      </div>
    </div>

    <div class="card shadow-sm">
      <div class="card-body">
        <h4 class="card-title mb-3">Preços Registrados</h4>

        <table class="table table-striped table-bordered">
          <thead class="table-dark">
            <tr>
              <th>ID</th>
              <th>Produto</th>
              <th>Fornecedor</th>
              <th>Preço</th>
              <th>Ação</th>
            </tr>
          </thead>

          <tbody>
            <% lista.forEach(item => { %>
              <tr>
                <td><%= item.idPreco %></td>
                <td><%= item.produto %></td>
                <td><%= item.fornecedor %></td>
                <td>R$ <%= item.preco.toFixed(2) %></td>
                <td>
                  <a href="/precos/delete/<%= item.idPreco %>" class="btn btn-danger btn-sm">
                    Excluir
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>

        </table>
      </div>
    </div>

  </div>

</body>
</html>
