<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <title>Compras - Plantech</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

  <nav class="navbar navbar-dark bg-dark p-3 mb-4">
    <div class="container-fluid">
      <span class="navbar-brand">Plantech • Compras</span>
      <a href="/dashboard" class="btn btn-outline-light btn-sm">Voltar</a>
    </div>
  </nav>

  <div class="container">

    <% if (erro) { %>
      <div class="alert alert-danger"><%= erro %></div>
    <% } %>

    <div class="card shadow-sm mb-4">
      <div class="card-body">
        <h4 class="card-title mb-3">Registrar Compra</h4>

        <form action="/compras/add" method="POST" class="row g-3">

          <div class="col-md-6">
            <label class="form-label">Nome do Produto</label>
            <input type="text" name="nomeProduto" class="form-control" required>
          </div>

          <div class="col-md-3">
            <label class="form-label">Quantidade</label>
            <input type="number" name="quantidade" class="form-control" required>
          </div>

          <div class="col-md-3">
            <label class="form-label">Preço</label>
            <input type="number" step="0.01" name="preco" class="form-control" required>
          </div>

          <div class="col-12">
            <button class="btn btn-success w-100">Salvar</button>
          </div>

        </form>
      </div>
    </div>

    <div class="card shadow-sm">
      <div class="card-body">
        <h4 class="card-title mb-3">Compras Registradas</h4>

        <table class="table table-striped table-bordered">
          <thead class="table-dark">
            <tr>
              <th>ID</th>
              <th>Produto</th>
              <th>Qtd.</th>
              <th>Preço</th>
              <th>Total</th>
              <th>Ação</th>
            </tr>
          </thead>

          <tbody>
            <% lista.forEach(item => { %>
              <tr>
                <td><%= item.idCompra %></td>
                <td><%= item.nomeProduto %></td>
                <td><%= item.quantidade %></td>
                <td>R$ <%= item.preco.toFixed(2) %></td>
                <td>R$ <%= (item.quantidade * item.preco).toFixed(2) %></td>
                <td>
                  <a href="/compras/delete/<%= item.idCompra %>" class="btn btn-danger btn-sm">Excluir</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

  </div>

</body>

</html>
