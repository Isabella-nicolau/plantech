<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8"><title>Compras - Plantech</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <nav class="navbar navbar-dark p-3 mb-4">
    <div class="container">
      <span class="navbar-brand">ðŸŒ± Plantech â€¢ Compras</span>
      <a href="/dashboard" class="btn btn-outline-light btn-sm">Voltar</a>
    </div>
  </nav>

  <div class="container">
    <% if (erro) { %><div class="alert alert-danger"><%= erro %></div><% } %>

    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title mb-3 text-success">Registrar Entrada (Nota Fiscal)</h5>
        <form action="/compras/add" method="POST" class="row g-3">
          <div class="col-md-5">
            <label class="form-label">Produto</label>
            <select name="idProduto" class="form-select" required>
              <option value="" selected disabled>Escolha o produto...</option>
              <% produtos.forEach(p => { %>
                <option value="<%= p.numProduto %>"><%= p.nomeProduto %></option>
              <% }) %>
            </select>
          </div>
          <div class="col-md-3">
            <label class="form-label">Fornecedor</label>
            <select name="idFornecedor" class="form-select" required>
              <option value="" selected disabled>Quem forneceu?</option>
              <% fornecedores.forEach(f => { %>
                <option value="<%= f.idFornecedor %>"><%= f.nome %></option>
              <% }) %>
            </select>
          </div>
          <div class="col-md-2">
            <label class="form-label">Qtd.</label>
            <input type="number" name="quantidade" class="form-control" required>
          </div>
          <div class="col-md-2">
            <label class="form-label">Custo Unit.</label>
            <input type="number" step="0.01" name="precoCusto" class="form-control" required>
          </div>
          <div class="col-12"><button class="btn btn-success w-100">Registrar Entrada</button></div>
        </form>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h5 class="card-title text-success">HistÃ³rico de Compras</h5>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>ID</th><th>Data</th><th>Produto</th><th>Fornecedor</th><th>Qtd</th><th>Custo</th><th>AÃ§Ã£o</th>
            </tr>
          </thead>
          <tbody>
            <% lista.forEach(item => { %>
              <tr>
                <td>#<%= item.idCompra %></td>
                <td><%= new Date(item.dataCompra).toLocaleDateString() %></td>
                <td><%= item.nomeProduto %></td>
                <td><%= item.nomeFornecedor %></td>
                <td><%= item.quantidade %></td>
                <td>R$ <%= item.precoCusto %></td>
                <td><a href="/compras/delete/<%= item.idCompra %>" class="btn btn-danger btn-sm">X</a></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>