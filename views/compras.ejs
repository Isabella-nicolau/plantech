<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Compras - Plantech</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
  <style>
    /* Ajustes de Contraste para o Tema Dark */
    .form-control, .form-select {
      background-color: #12141e !important;
      border: 1px solid rgba(255, 255, 255, 0.1) !important;
      color: #ffffff !important;
    }
    .form-control:focus, .form-select:focus {
      border-color: #3b82f6 !important; /* Azul para Compras */
      box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.2) !important;
    }
    .form-label {
      color: #e0e0e0;
      font-weight: 500;
      font-size: 0.9rem;
    }
    
    /* Scroll na tabela do carrinho */
    .cart-table-container {
      max-height: 300px;
      overflow-y: auto;
    }
    .cart-table-container::-webkit-scrollbar { width: 6px; }
    .cart-table-container::-webkit-scrollbar-thumb { background: rgba(255,255,255,0.1); border-radius: 10px; }
  </style>
</head>
<body>

  <nav class="navbar navbar-expand-lg border-bottom border-secondary border-opacity-10">
    <div class="container">
      <a class="navbar-brand" href="/dashboard">
        <span style="font-size: 1.5rem;">ðŸŒ±</span> Plantech
      </a>
      <button class="navbar-toggler bg-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
        <div class="nav-pills-custom">
          <a href="/dashboard" class="nav-link-custom">Dashboard</a>
          <a href="/compras" class="nav-link-custom active">Compras</a> <a href="/vendas" class="nav-link-custom">Vendas</a>
          <a href="/produtos" class="nav-link-custom">Produtos</a>
          <a href="/clientes" class="nav-link-custom">Clientes</a>
          <a href="/fornecedores" class="nav-link-custom">Fornecedores</a>
          <a href="/relatorios" class="nav-link-custom">RelatÃ³rios</a>
        </div>
      </div>

      <div class="d-none d-lg-block">
        <a href="/login/logout" class="btn btn-sm btn-outline-danger rounded-pill px-3">Sair âž”</a>
      </div>
    </div>
  </nav>

  <div class="container pt-4">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h2 class="mb-0 fw-bold text-white">Registro de Compras</h2>
        <p class="text-white text-opacity-50 small mb-0">LanÃ§amento de Notas Fiscais e Entrada de Estoque</p>
      </div>
      <span class="badge bg-white bg-opacity-10 text-white px-3 py-2 rounded-pill border border-secondary border-opacity-25">
        HistÃ³rico: <%= historico.length %> notas
      </span>
    </div>

    <% if (erro) { %>
      <div class="alert alert-danger rounded-4 mb-4 text-center border-0 bg-danger bg-opacity-25 text-white"><%= erro %></div>
    <% } %>

    <div class="row g-4">
      
      <div class="col-lg-4">
        <div class="card-panel h-100 bg-grad-dark" style="border: 1px solid rgba(255,255,255,0.05);">
          <div class="d-flex align-items-center gap-2 mb-4" style="color: #60a5fa;">
            <span class="fs-5">ðŸ“¥</span> 
            <h5 class="mb-0 fw-bold">Dados da Nota</h5>
          </div>
          
          <form action="/compras/add" method="POST" id="formCompra">
            
            <div class="mb-4">
              <label class="form-label">Fornecedor</label>
              <select name="idFornecedor" class="form-select text-white fw-bold" required>
                <option value="" disabled selected>Selecione a origem...</option>
                <% fornecedores.forEach(f => { %>
                  <option value="<%= f.idFornecedor %>"><%= f.nome %> (CNPJ: <%= f.cnpj %>)</option>
                <% }) %>
              </select>
            </div>

            <hr class="border-secondary opacity-25 my-4">

            <h6 class="text-white mb-3 opacity-75">Adicionar Itens</h6>
            
            <div class="mb-3">
              <label class="form-label small">Produto</label>
              <select id="selProduto" class="form-select">
                <option value="" disabled selected>Escolha o item...</option>
                <% produtos.forEach(p => { %>
                  <option value="<%= p.numProduto %>" data-nome="<%= p.nomeProduto %>">
                    <%= p.nomeProduto %> (Estoque: <%= p.estoqueAtual %>)
                  </option>
                <% }) %>
              </select>
            </div>

            <div class="row g-2 mb-3">
              <div class="col-6">
                <label class="form-label small">Qtd.</label>
                <input type="number" id="qtdProduto" class="form-control text-center" value="1" min="1">
              </div>
              <div class="col-6">
                <label class="form-label small">Custo Unit. (R$)</label>
                <input type="number" id="custoProduto" class="form-control text-center" placeholder="0.00" step="0.01">
              </div>
            </div>

            <button type="button" class="btn btn-outline-light w-100 mb-3" onclick="adicionarAoCarrinho()">
              + Incluir na Nota
            </button>

            <input type="hidden" name="itensCarrinho" id="inputItensCarrinho">

            <div class="mt-auto pt-3 border-top border-secondary border-opacity-10">
              <button class="btn w-100 py-3 shadow-lg fw-bold text-white" style="background-color: #3b82f6; border-radius: 50px;">
                âœ… Confirmar Entrada
              </button>
            </div>

          </form>
        </div>
      </div>

      <div class="col-lg-8">
        <div class="card-panel h-100 d-flex flex-column p-0 overflow-hidden">
          
          <div class="p-4 bg-dark bg-opacity-25 border-bottom border-secondary border-opacity-10">
            <h5 class="text-white mb-3 fw-bold">ðŸ›’ Itens da Nota Atual</h5>
            <div class="cart-table-container">
              <table class="table table-hover align-middle mb-0">
                <thead class="text-white sticky-top" style="background: #151725;">
                  <tr>
                    <th>Produto</th>
                    <th class="text-center">Qtd</th>
                    <th class="text-end">Custo</th>
                    <th class="text-end">Subtotal</th>
                    <th class="text-end"></th>
                  </tr>
                </thead>
                <tbody id="listaCarrinho" class="border-top-0">
                  <tr><td colspan="5" class="text-center text-white py-4 small">Nenhum item adicionado ainda.</td></tr>
                </tbody>
              </table>
            </div>
            
            <div class="mt-3 p-3 rounded-4 d-flex justify-content-between align-items-center" 
                 style="background: linear-gradient(135deg, #1e3a8a, #172554); border: 1px solid rgba(59,130,246,0.3);">
              <span class="text-blue-200 small text-uppercase fw-bold opacity-75">Valor Total da Nota</span>
              <h3 class="mb-0 fw-bold text-white" id="totalCompraDisplay">R$ 0.00</h3>
            </div>
          </div>

          <div class="p-4 flex-grow-1 bg-dark bg-opacity-10">
            <h6 class="text-white mb-3 opacity-50 text-uppercase fw-bold small">Ãšltimas Entradas</h6>
            <div class="table-responsive">
              <table class="table table-hover align-middle table-sm">
                <thead>
                  <tr>
                    <th>Data</th>
                    <th>Fornecedor</th>
                    <th class="text-end">Valor</th>
                    <th class="text-end">AÃ§Ã£o</th>
                  </tr>
                </thead>
                <tbody>
                  <% historico.slice(0, 5).forEach(c => { %>
                    <tr>
                      <td class="text-white opacity-75"><%= new Date(c.dataCompra).toLocaleDateString() %></td>
                      <td class="fw-bold text-white"><%= c.nomeFornecedor %></td>
                      <td class="text-end text-info fw-bold">R$ <%= c.valorTotal.toFixed(2) %></td>
                      <td class="text-end">
                        <a href="/compras/delete/<%= c.idCompra %>" 
                           class="btn btn-sm btn-outline-danger px-2 py-0 rounded-pill" 
                           style="font-size: 0.75rem;"
                           onclick="return confirm('ATENÃ‡ÃƒO: Isso apagarÃ¡ o registro financeiro, mas NÃƒO estornarÃ¡ o estoque. Continuar?');">
                          Excluir
                        </a>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>

        </div>
      </div>

    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    let carrinho = [];

    function adicionarAoCarrinho() {
      const sel = document.getElementById('selProduto');
      const qtdInput = document.getElementById('qtdProduto');
      const custoInput = document.getElementById('custoProduto');
      
      const id = sel.value;
      const nome = sel.options[sel.selectedIndex]?.getAttribute('data-nome');
      const qtd = parseInt(qtdInput.value);
      const custo = parseFloat(custoInput.value);

      if (!id) {
        alert("Selecione um produto.");
        return;
      }
      if (qtd <= 0 || isNaN(qtd)) {
        alert("Quantidade invÃ¡lida.");
        return;
      }
      if (isNaN(custo) || custo < 0) {
        alert("Informe o custo unitÃ¡rio.");
        return;
      }

      carrinho.push({ id, nome, qtd, custo });
      atualizarTabela();
      
      // Limpa campos e foca no produto para agilidade
      sel.value = "";
      qtdInput.value = "1";
      custoInput.value = "";
      sel.focus();
    }

    function removerItem(index) {
      carrinho.splice(index, 1);
      atualizarTabela();
    }

    function atualizarTabela() {
      const tbody = document.getElementById('listaCarrinho');
      const totalDisplay = document.getElementById('totalCompraDisplay');
      const inputHidden = document.getElementById('inputItensCarrinho');
      
      tbody.innerHTML = "";
      let totalGeral = 0;

      if (carrinho.length === 0) {
        tbody.innerHTML = '<tr><td colspan="5" class="text-center text-white py-4 small">Nenhum item adicionado ainda.</td></tr>';
      }

      carrinho.forEach((item, index) => {
        const subtotal = item.qtd * item.custo;
        totalGeral += subtotal;

        const tr = document.createElement('tr');
        tr.innerHTML = `
          <td class="text-white">${item.nome}</td>
          <td class="text-center text-white opacity-75">${item.qtd}</td>
          <td class="text-end text-white opacity-75">R$ ${item.custo.toFixed(2)}</td>
          <td class="text-end text-info fw-bold">R$ ${subtotal.toFixed(2)}</td>
          <td class="text-end"><button type="button" class="btn btn-sm btn-link text-danger text-decoration-none p-0" onclick="removerItem(${index})">âœ•</button></td>
        `;
        tbody.appendChild(tr);
      });

      totalDisplay.innerText = "R$ " + totalGeral.toFixed(2);
      inputHidden.value = JSON.stringify(carrinho);
    }

    document.getElementById('formCompra').onsubmit = function() {
      if(carrinho.length === 0) {
        alert("A nota fiscal deve ter pelo menos um item!");
        return false;
      }
      return true;
    }
  </script>

</body>
</html>