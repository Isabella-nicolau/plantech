<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8"><title>Entrega - Plantech</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <nav class="navbar navbar-dark p-3 mb-4">
    <div class="container">
      <span class="navbar-brand">üå± Plantech ‚Ä¢ Sa√≠da de Mercadoria</span>
      <a href="/dashboard" class="btn btn-outline-light btn-sm">Voltar</a>
    </div>
  </nav>

  <div class="container">
    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title mb-3 text-success">Registrar Venda/Entrega</h5>
        <form action="/entrega/add" method="POST" class="row g-3">
          <div class="col-md-6">
            <label>Cliente</label>
            <select name="idCliente" class="form-select" required>
              <option value="" disabled selected>Selecione...</option>
              <% clientes.forEach(c => { %>
                <option value="<%= c.idCliente %>"><%= c.nome %></option>
              <% }) %>
            </select>
          </div>
          <div class="col-md-4">
            <label>Produto (Dispon√≠vel)</label>
            <select name="idProduto" class="form-select" required>
              <option value="" disabled selected>Selecione...</option>
              <% produtos.forEach(p => { %>
                <option value="<%= p.numProduto %>"><%= p.nomeProduto %> (Estoque: <%= p.estoqueAtual %>)</option>
              <% }) %>
            </select>
          </div>
          <div class="col-md-2">
            <label>Qtd</label>
            <input type="number" name="quantidade" class="form-control" required>
          </div>
          <div class="col-12"><button class="btn btn-success w-100">Confirmar Sa√≠da</button></div>
        </form>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h5 class="card-title text-success">Hist√≥rico de Sa√≠das</h5>
        <table class="table table-hover">
          <thead>
            <tr><th>ID</th><th>Data</th><th>Cliente</th><th>Produto</th><th>Qtd</th><th>A√ß√£o</th></tr>
          </thead>
          <tbody>
            <% lista.forEach(item => { %>
              <tr>
                <td><%= item.idEntrega %></td>
                <td><%= new Date(item.dataEntrega).toLocaleDateString() %></td>
                <td><%= item.nomeCliente %></td>
                <td><%= item.nomeProduto %></td>
                <td><%= item.quantidade %></td>
                <td><a href="/entrega/delete/<%= item.idEntrega %>" class="btn btn-danger btn-sm">X</a></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>