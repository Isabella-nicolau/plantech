<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8"><title>Fornecedores - Plantech</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <nav class="navbar navbar-dark p-3 mb-4">
    <div class="container">
      <span class="navbar-brand">ðŸŒ± Plantech â€¢ Fornecedores</span>
      <a href="/dashboard" class="btn btn-outline-light btn-sm">Voltar</a>
    </div>
  </nav>

  <div class="container">
    <% if (erro) { %><div class="alert alert-danger"><%= erro %></div><% } %>

    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title text-success mb-3">Cadastrar Parceiro</h5>
        <form action="/fornecedores/add" method="POST" class="row g-3">
          <div class="col-md-5">
            <label class="form-label">Nome Fantasia / RazÃ£o Social</label>
            <input type="text" name="nome" class="form-control" required>
          </div>
          <div class="col-md-3">
            <label class="form-label">CNPJ</label>
            <input type="text" name="cnpj" class="form-control" required>
          </div>
          <div class="col-md-4">
            <label class="form-label">Email de Contato</label>
            <input type="email" name="email" class="form-control">
          </div>
          <div class="col-12"><button class="btn btn-success w-100">Registrar Fornecedor</button></div>
        </form>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h5 class="card-title text-success">Lista de Fornecedores</h5>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Fornecedor</th>
              <th>CNPJ</th>
              <th>Email</th>
              <th>AÃ§Ã£o</th>
            </tr>
          </thead>
          <tbody>
            <% lista.forEach(f => { %>
              <tr>
                <td>#<%= f.idFornecedor %></td>
                <td class="fw-bold"><%= f.nome %></td>
                <td><%= f.cnpj %></td>
                <td><%= f.email || "-" %></td>
                <td><a href="/fornecedores/delete/<%= f.idFornecedor %>" class="btn btn-sm btn-danger">Remover</a></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>