<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Fornecedores - Plantech</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
  <style>
    /* Ajustes espec√≠ficos para inputs no Dark Mode */
    .form-control, .form-select {
      background-color: #12141e !important;
      border: 1px solid rgba(255, 255, 255, 0.1) !important;
      color: #ffffff !important;
    }
    
    /* Foco padr√£o (Ciano) */
    .form-control:focus, .form-select:focus {
      border-color: #06b6d4 !important;
      box-shadow: 0 0 0 2px rgba(6, 182, 212, 0.2) !important;
    }

    /* ESTILO DE ERRO (Quando o campo obrigat√≥rio estiver vazio) */
    .was-validated .form-control:invalid {
      border-color: #ef4444 !important; /* Vermelho */
      background-image: none !important;
    }
    .was-validated .form-control:invalid:focus {
      box-shadow: 0 0 0 2px rgba(239, 68, 68, 0.25) !important;
    }

    .form-label {
      color: #e0e0e0;
      font-weight: 500;
      font-size: 0.9rem;
    }

    /* Asterisco de Obrigat√≥rio */
    .text-required {
      color: #ef4444; /* Vermelho */
      font-weight: bold;
      margin-left: 3px;
    }

    ::placeholder {
      color: rgba(255, 255, 255, 0.3) !important;
    }
    
    /* Scroll na tabela */
    .table-container {
      max-height: 70vh;
      overflow-y: auto;
    }
    .table-container::-webkit-scrollbar { width: 6px; }
    .table-container::-webkit-scrollbar-thumb { background: rgba(255,255,255,0.1); border-radius: 10px; }

    /* Avatar Espec√≠fico de Fornecedor (Ciano) */
    .avatar-forn {
      width: 45px; 
      height: 45px;
      color: #ffffff;
      background: linear-gradient(135deg, #06b6d4, #2563eb); 
      box-shadow: 0 4px 10px rgba(6, 182, 212, 0.3);
    }
    
    /* Bot√£o Prim√°rio Personalizado (Ciano) */
    .btn-cyan {
      background-color: #06b6d4;
      color: #fff;
      border: none;
      border-radius: 50px;
      font-weight: 700;
      padding: 10px 25px;
      transition: 0.3s;
    }
    .btn-cyan:hover {
      background-color: #0891b2;
      color: #fff;
      transform: scale(1.02);
    }

    /* Bot√£o de Edi√ß√£o */
    .btn-warning-custom {
      background-color: #f59e0b; color: #000; border: none; border-radius: 50px; font-weight: 700; padding: 10px 25px; transition: 0.3s;
    }
    .btn-warning-custom:hover { background-color: #d97706; color: #fff; }
  </style>
</head>
<body>

  <nav class="navbar navbar-expand-lg border-bottom border-secondary border-opacity-10">
    <div class="container">
      <a class="navbar-brand" href="/dashboard">
        <span style="font-size: 1.5rem;">üå±</span> Plantech
      </a>
      <button class="navbar-toggler bg-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
        <div class="nav-pills-custom">
          <a href="/dashboard" class="nav-link-custom">Dashboard</a>
          <a href="/compras" class="nav-link-custom">Compras</a>
          <a href="/vendas" class="nav-link-custom">Vendas</a>
          <a href="/produtos" class="nav-link-custom">Produtos</a>
          <a href="/clientes" class="nav-link-custom">Clientes</a>
          <a href="/fornecedores" class="nav-link-custom active">Fornecedores</a> <a href="/relatorios" class="nav-link-custom">Relat√≥rios</a>
        </div>
      </div>

      <div class="d-none d-lg-block">
        <a href="/login/logout" class="btn btn-sm btn-outline-danger rounded-pill px-3">Sair ‚ûî</a>
      </div>
    </div>
  </nav>

  <div class="container pt-4">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h2 class="mb-0 fw-bold text-white">Gest√£o de Fornecedores</h2>
        <p class="text-white text-opacity-50 small mb-0">Parceiros de abastecimento e compras</p>
      </div>
      <div class="d-flex gap-2">
        <button onclick="limparForm()" class="btn btn-outline-light btn-sm rounded-pill px-3">Novo (+)</button>
        <span class="badge bg-white bg-opacity-10 text-white px-3 py-2 rounded-pill border border-secondary border-opacity-25">
          Total: <%= lista.length %>
        </span>
      </div>
    </div>

    <% if (erro) { %>
      <div class="alert alert-danger rounded-4 mb-4 text-center border-0 bg-danger bg-opacity-25 text-white"><%= erro %></div>
    <% } %>

    <div class="row g-4">
      
      <div class="col-lg-4">
        <div class="card-panel h-100 bg-grad-dark" style="border: 1px solid rgba(255,255,255,0.05);">
          <div class="d-flex align-items-center gap-2 mb-4" style="color: #06b6d4;">
            <span class="fs-5">üè≠</span> 
            <h5 class="mb-0 fw-bold" id="formTitle">Novo Parceiro</h5>
          </div>
          
          <form action="/fornecedores/add" method="POST" class="row g-3 needs-validation" id="formForn" novalidate>
            
            <div class="col-12">
              <label class="form-label">Raz√£o Social <span class="text-required">*</span></label>
              <input type="text" name="nome" id="inputNome" class="form-control" required placeholder="Nome da empresa">
              <div class="invalid-feedback text-end small" style="color: #ef4444;">Nome √© obrigat√≥rio.</div>
            </div>

            <div class="col-12">
              <label class="form-label">CNPJ <span class="text-required">*</span></label>
              <input type="text" name="cnpj" id="inputCnpj" class="form-control" 
                     required placeholder="00.000.000/0000-00"
                     maxlength="18"
                     oninput="mascaraCNPJ(this)">
              <div class="invalid-feedback text-end small" style="color: #ef4444;">CNPJ √© obrigat√≥rio.</div>
            </div>

            <div class="col-12">
              <label class="form-label">Endere√ßo <span class="text-required">*</span></label>
              <textarea name="endereco" id="inputEnd" class="form-control" rows="2" required placeholder="Logradouro, N√∫mero, Cidade - UF"></textarea>
              <div class="invalid-feedback text-end small" style="color: #ef4444;">Endere√ßo √© obrigat√≥rio.</div>
            </div>

            <div class="col-6">
              <label class="form-label">Telefone</label>
              <input type="text" name="telefone" id="inputTel" class="form-control" placeholder="(00) 0000-0000" oninput="mascaraTelefone(this)" maxlength="15">
            </div>

            <div class="col-6">
              <label class="form-label">Email</label>
              <input type="email" name="email" id="inputEmail" class="form-control" placeholder="contato@forn.com">
            </div>

            <div class="col-12 mt-4 d-flex gap-2">
              <button type="submit" class="btn btn-cyan w-100 py-3 shadow-lg" id="btnSalvar">Salvar Fornecedor</button>
              
              <button type="button" class="btn btn-outline-secondary w-100 py-3 rounded-pill fw-bold" id="btnCancelar" onclick="limparForm()" style="display:none;">
                Cancelar
              </button>
            </div>

          </form>
        </div>
      </div>

      <div class="col-lg-8">
        <div class="card-panel h-100 p-0 overflow-hidden">
          <div class="p-4 border-bottom border-secondary border-opacity-10 bg-dark bg-opacity-25">
            <h5 class="text-white mb-0 fw-bold">üì¶ Base de Fornecedores</h5>
          </div>
          
          <div class="table-container p-0">
            <table class="table table-hover align-middle mb-0">
              <thead class="bg-dark text-white sticky-top" style="z-index: 2;">
                <tr>
                  <th class="ps-4" style="background: #151725;">Empresa / CNPJ</th>
                  <th style="background: #151725;">Localiza√ß√£o</th>
                  <th style="background: #151725;">Contato</th>
                  <th class="text-end pe-4" style="background: #151725;">A√ß√£o</th>
                </tr>
              </thead>
              <tbody class="border-top-0">
                <% lista.forEach(f => { %>
                  <tr>
                    <td class="ps-4 py-3">
                      <div class="d-flex align-items-center gap-3">
                        <div class="rounded-circle d-flex align-items-center justify-content-center fw-bold flex-shrink-0 avatar-forn">
                          F
                        </div>
                        <div style="line-height: 1.3;">
                          <strong class="text-white d-block"><%= f.nome %></strong>
                          <small class="text-white text-opacity-50"><%= f.cnpj %></small>
                        </div>
                      </div>
                    </td>
                    
                    <td>
                      <small class="text-white text-opacity-50 text-truncate d-block" style="max-width: 200px;">
                        üìç <%= f.endereco %>
                      </small>
                    </td>
                    
                    <td class="small text-white text-opacity-75">
                      <% if(f.email) { %> <div class="mb-1">‚úâÔ∏è <%= f.email %></div> <% } %>
                      <% if(f.telefone) { %> <div>üìû <%= f.telefone %></div> <% } %>
                    </td>
                    
                    <td class="text-end pe-4">
                      <button class="btn btn-sm btn-outline-warning rounded-pill px-3 me-1"
                        onclick="editar(this)"
                        data-id="<%= f.idFornecedor %>"
                        data-nome="<%= f.nome %>"
                        data-cnpj="<%= f.cnpj %>"
                        data-tel="<%= f.telefone %>"
                        data-email="<%= f.email %>"
                        data-end="<%= f.endereco %>">
                        ‚úèÔ∏è
                      </button>

                      <a href="/fornecedores/delete/<%= f.idFornecedor %>" 
                         class="btn btn-sm btn-outline-danger rounded-pill px-3"
                         title="Excluir Fornecedor"
                         onclick="return confirm('ATEN√á√ÉO: Excluir este fornecedor pode afetar o hist√≥rico de compras. Continuar?');">
                        üóëÔ∏è
                      </a>
                    </td>
                  </tr>
                <% }) %>
                
                <% if(lista.length === 0) { %>
                  <tr>
                    <td colspan="4" class="text-center py-5">
                      <div class="opacity-25 mb-2" style="font-size: 3rem;">üöö</div>
                      <p class="text-white text-opacity-50">Nenhum fornecedor homologado.</p>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    // Valida√ß√£o Visual
    (() => {
      'use strict'
      const forms = document.querySelectorAll('.needs-validation')
      Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
          if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
          }
          form.classList.add('was-validated')
        }, false)
      })
    })()

    // M√°scara CNPJ
    function mascaraCNPJ(input) {
      let v = input.value.replace(/\D/g, "");
      if (v.length > 14) v = v.slice(0, 14);
      
      v = v.replace(/^(\d{2})(\d)/, "$1.$2");
      v = v.replace(/^(\d{2})\.(\d{3})(\d)/, "$1.$2.$3");
      v = v.replace(/\.(\d{3})(\d)/, ".$1/$2");
      v = v.replace(/(\d{4})(\d)/, "$1-$2");
      
      input.value = v;
    }

    // M√°scara Telefone
    function mascaraTelefone(input) {
      let v = input.value.replace(/\D/g, "");
      if (v.length > 11) v = v.slice(0, 11);
      v = v.replace(/^(\d{2})(\d)/g, "($1) $2");
      v = v.replace(/(\d)(\d{4})$/, "$1-$2");
      input.value = v;
    }

    // Fun√ß√£o de Editar
    function editar(btn) {
      const d = btn.dataset;
      
      document.getElementById('inputNome').value = d.nome;
      document.getElementById('inputCnpj').value = d.cnpj;
      document.getElementById('inputTel').value = d.tel;
      document.getElementById('inputEmail').value = d.email;
      document.getElementById('inputEnd').value = d.end;

      const form = document.getElementById('formForn');
      form.action = "/fornecedores/update/" + d.id; 
      
      document.getElementById('formTitle').innerText = "‚úèÔ∏è Editando Fornecedor";
      
      const btnSalvar = document.getElementById('btnSalvar');
      btnSalvar.innerText = "Atualizar Cadastro";
      btnSalvar.classList.remove('btn-cyan');
      btnSalvar.classList.add('btn-warning-custom');
      
      document.getElementById('btnCancelar').style.display = "block";
    }

    // Limpar Formul√°rio
    function limparForm() {
      const form = document.getElementById('formForn');
      form.reset();
      form.classList.remove('was-validated');
      form.action = "/fornecedores/add";
      document.getElementById('formTitle').innerText = "Novo Parceiro";
      
      const btnSalvar = document.getElementById('btnSalvar');
      btnSalvar.innerText = "Salvar Fornecedor";
      btnSalvar.classList.add('btn-cyan');
      btnSalvar.classList.remove('btn-warning-custom');
      
      document.getElementById('btnCancelar').style.display = "none";
    }
  </script>

</body>
</html>