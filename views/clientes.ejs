<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8"><title>Clientes - Plantech</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <nav class="navbar navbar-dark p-3 mb-4">
    <div class="container">
      <span class="navbar-brand">ðŸŒ± Plantech â€¢ Carteira de Clientes</span>
      <a href="/dashboard" class="btn btn-outline-light btn-sm">Voltar</a>
    </div>
  </nav>

  <div class="container">
    <% if (erro) { %><div class="alert alert-danger"><%= erro %></div><% } %>

    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title text-success mb-3">Novo Cliente</h5>
        <form action="/clientes/add" method="POST" class="row g-3">
          <div class="col-md-2">
            <label class="form-label">Tipo</label>
            <select name="tipo" class="form-select">
              <option value="PF">Pessoa FÃ­sica</option>
              <option value="PJ">JurÃ­dica</option>
            </select>
          </div>
          <div class="col-md-4">
            <label class="form-label">Nome Completo / RazÃ£o Social</label>
            <input type="text" name="nome" class="form-control" required>
          </div>
          <div class="col-md-3">
            <label class="form-label">CPF / CNPJ</label>
            <input type="text" name="documento" class="form-control" required>
          </div>
          <div class="col-md-3">
            <label class="form-label">Telefone</label>
            <input type="text" name="telefone" class="form-control">
          </div>
          <div class="col-12"><button class="btn btn-success w-100">Salvar Cliente</button></div>
        </form>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h5 class="card-title text-success">Clientes Ativos</h5>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Tipo</th>
              <th>Nome</th>
              <th>Documento</th>
              <th>Contato</th>
              <th>AÃ§Ã£o</th>
            </tr>
          </thead>
          <tbody>
            <% lista.forEach(c => { %>
              <tr>
                <td>
                  <% if(c.tipo === 'PJ') { %>
                    <span class="badge bg-dark">Empresa</span>
                  <% } else { %>
                    <span class="badge bg-info text-dark">Pessoal</span>
                  <% } %>
                </td>
                <td class="fw-bold"><%= c.nome %></td>
                <td><%= c.documento %></td>
                <td><%= c.telefone %></td>
                <td><a href="/clientes/delete/<%= c.idCliente %>" class="btn btn-sm btn-danger">Excluir</a></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>