<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Clientes - Plantech</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
  <style>
    /* Ajustes espec√≠ficos para inputs no Dark Mode */
    .form-control, .form-select {
      background-color: #12141e !important;
      border: 1px solid rgba(255, 255, 255, 0.1) !important;
      color: #ffffff !important;
    }
    
    /* Foco padr√£o (Verde Plantech) */
    .form-control:focus, .form-select:focus {
      border-color: var(--accent-lime) !important;
      box-shadow: 0 0 0 2px rgba(204, 243, 129, 0.2) !important;
    }

    /* ESTILO DE ERRO (Quando o campo obrigat√≥rio estiver vazio) */
    .was-validated .form-control:invalid, 
    .was-validated .form-select:invalid {
      border-color: #ef4444 !important; /* Vermelho */
      background-image: none !important; /* Remove √≠cone padr√£o do bootstrap */
    }
    
    .was-validated .form-control:invalid:focus, 
    .was-validated .form-select:invalid:focus {
      box-shadow: 0 0 0 2px rgba(239, 68, 68, 0.25) !important;
    }

    .form-label {
      color: #e0e0e0;
      font-weight: 500;
      font-size: 0.9rem;
    }
    
    /* Asterisco de Obrigat√≥rio */
    .text-required {
      color: #ef4444; /* Vermelho */
      font-weight: bold;
      margin-left: 3px;
    }

    ::placeholder {
      color: rgba(255, 255, 255, 0.3) !important;
    }
    
    /* Scroll personalizado na tabela */
    .table-container {
      max-height: 70vh;
      overflow-y: auto;
    }
    .table-container::-webkit-scrollbar { width: 6px; }
    .table-container::-webkit-scrollbar-thumb { background: rgba(255,255,255,0.1); border-radius: 10px; }

    /* Classes para os Avatares */
    .avatar-base { width: 45px; height: 45px; color: #121212; }
    .avatar-pj { background-color: var(--accent-lime); }
    .avatar-pf { background-color: #e0e0e0; }

    /* Bot√£o de Edi√ß√£o */
    .btn-warning-custom {
      background-color: #f59e0b; color: #000; border: none; border-radius: 50px; font-weight: 700; padding: 10px 25px; transition: 0.3s;
    }
    .btn-warning-custom:hover { background-color: #d97706; color: #fff; }
  </style>
</head>
<body>

  <nav class="navbar navbar-expand-lg border-bottom border-secondary border-opacity-10">
    <div class="container">
      <a class="navbar-brand" href="/dashboard">
        <span style="font-size: 1.5rem;">üå±</span> Plantech
      </a>

      <button class="navbar-toggler bg-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
        <div class="nav-pills-custom">
          <a href="/dashboard" class="nav-link-custom">Dashboard</a>
          <a href="/compras" class="nav-link-custom">Compras</a>
          <a href="/vendas" class="nav-link-custom">Vendas</a>
          <a href="/produtos" class="nav-link-custom">Produtos</a>
          <a href="/clientes" class="nav-link-custom active">Clientes</a>
          <a href="/fornecedores" class="nav-link-custom">Fornecedores</a>
          <a href="/relatorios" class="nav-link-custom">Relat√≥rios</a>
        </div>
      </div>

      <div class="d-none d-lg-block">
        <a href="/login/logout" class="btn btn-sm btn-outline-danger rounded-pill px-3">Sair ‚ûî</a>
      </div>
    </div>
  </nav>

  <div class="container pt-4">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h2 class="mb-0 fw-bold text-white">Carteira de Clientes</h2>
        <p class="text-white text-opacity-50 small mb-0">Gerencie consumidores Pessoa F√≠sica e Jur√≠dica</p>
      </div>
      <div class="d-flex gap-2">
        <button onclick="limparForm()" class="btn btn-outline-light btn-sm rounded-pill px-3">Novo (+)</button>
        <span class="badge bg-white bg-opacity-10 text-white px-3 py-2 rounded-pill border border-secondary border-opacity-25">
          Total: <%= lista.length %>
        </span>
      </div>
    </div>

    <% if (erro) { %>
      <div class="alert alert-danger rounded-4 mb-4 text-center border-0 bg-danger bg-opacity-25 text-white"><%= erro %></div>
    <% } %>

    <div class="row g-4">
      
      <div class="col-lg-4">
        <div class="card-panel h-100 bg-grad-dark" style="border: 1px solid rgba(255,255,255,0.05);">
          <div class="d-flex align-items-center gap-2 mb-4 text-lime">
            <span class="fs-5">‚ú®</span> 
            <h5 class="mb-0 fw-bold" id="formTitle">Novo Cliente</h5>
          </div>
          
          <form action="/clientes/add" method="POST" class="row g-3 needs-validation" id="formCliente" novalidate>
            
            <div class="col-12">
              <label class="form-label">Tipo de Pessoa</label>
              <select name="tipo" id="tipoCliente" class="form-select text-center fw-bold text-white" onchange="alternarTipo()">
                <option value="PF">Pessoa F√≠sica (CPF)</option>
                <option value="PJ">Pessoa Jur√≠dica (CNPJ)</option>
              </select>
            </div>

            <div class="col-12">
              <label class="form-label" id="labelNome">Nome Completo <span class="text-required">*</span></label>
              <input type="text" name="nome" id="inputNome" class="form-control" required placeholder="Ex: Jo√£o da Silva">
              <div class="invalid-feedback text-end small" style="color: #ef4444;">Nome √© obrigat√≥rio.</div>
            </div>

            <div class="col-12" id="divFantasia" style="display:none;">
              <label class="form-label">Nome Fantasia</label>
              <input type="text" name="nomeFantasia" id="inputFantasia" class="form-control" placeholder="Ex: Mercado Silva">
            </div>

            <div class="col-12">
              <label class="form-label" id="labelDocumento">CPF <span class="text-required">*</span></label>
              <input type="text" name="documento" id="inputDoc" class="form-control" 
                     required placeholder="000.000.000-00" 
                     oninput="mascaraDocumento(this)"
                     minlength="14" maxlength="18">
              <div class="invalid-feedback text-end small" style="color: #ef4444;">Documento inv√°lido ou vazio.</div>
            </div>

            <div class="col-6">
              <label class="form-label">Telefone</label>
              <input type="text" name="telefone" id="inputTel" class="form-control" placeholder="(00) 00000-0000" oninput="mascaraTelefone(this)" maxlength="15">
            </div>

            <div class="col-6">
              <label class="form-label">Email</label>
              <input type="email" name="email" id="inputEmail" class="form-control" placeholder="cliente@email.com">
            </div>

            <div class="col-12">
              <label class="form-label">Endere√ßo Completo <span class="text-required">*</span></label>
              <textarea name="endereco" id="inputEnd" class="form-control" rows="2" required placeholder="Rua, N√∫mero, Bairro..."></textarea>
              <div class="invalid-feedback text-end small" style="color: #ef4444;">Endere√ßo √© obrigat√≥rio.</div>
            </div>

            <div class="col-12 mt-4 d-flex gap-2">
              <button type="submit" class="btn btn-primary w-100 py-3 shadow-lg rounded-pill fw-bold" id="btnSalvar">
                <span class="fs-6">üíæ</span> Salvar Cadastro
              </button>
              
              <button type="button" class="btn btn-outline-secondary w-100 py-3 rounded-pill fw-bold" id="btnCancelar" onclick="limparForm()" style="display:none;">
                Cancelar
              </button>
            </div>

          </form>
        </div>
      </div>

      <div class="col-lg-8">
        <div class="card-panel h-100 p-0 overflow-hidden">
          <div class="p-4 border-bottom border-secondary border-opacity-10 bg-dark bg-opacity-25">
            <h5 class="text-white mb-0 fw-bold">üìá Base de Cadastros</h5>
          </div>
          
          <div class="table-container p-0">
            <table class="table table-hover align-middle mb-0">
              <thead class="bg-dark text-white sticky-top" style="z-index: 2;">
                <tr>
                  <th class="ps-4" style="background: #151725;">Identifica√ß√£o</th>
                  <th style="background: #151725;">Documento</th>
                  <th style="background: #151725;">Contato</th>
                  <th class="text-end pe-4" style="background: #151725;">A√ß√£o</th>
                </tr>
              </thead>
              <tbody class="border-top-0">
                <% lista.forEach(c => { %>
                  <tr>
                    <td class="ps-4 py-3">
                      <div class="d-flex align-items-center gap-3">
                        <div class="rounded-circle d-flex align-items-center justify-content-center fw-bold shadow-sm flex-shrink-0 avatar-base <%= c.tipo == 'PJ' ? 'avatar-pj' : 'avatar-pf' %>">
                          <%= c.tipo %>
                        </div>
                        <div style="line-height: 1.3;">
                          <strong class="text-white d-block"><%= c.nome %></strong>
                          <% if(c.tipo == 'PJ' && c.nomeFantasia){ %>
                            <small class="text-white text-opacity-50"><%= c.nomeFantasia %></small>
                          <% } else { %>
                            <small class="text-white text-opacity-50 text-truncate d-block" style="max-width: 200px;">
                              üìç <%= c.endereco %>
                            </small>
                          <% } %>
                        </div>
                      </div>
                    </td>
                    
                    <td>
                      <span class="badge bg-dark border border-secondary border-opacity-25 text-white fw-normal">
                        <%= c.documento %>
                      </span>
                    </td>
                    
                    <td class="small text-white text-opacity-75">
                      <% if(c.telefone) { %> <div class="mb-1">üìû <%= c.telefone %></div> <% } %>
                      <% if(c.email) { %> <div>‚úâÔ∏è <%= c.email %></div> <% } %>
                    </td>
                    
                    <td class="text-end pe-4">
                      <button class="btn btn-sm btn-outline-warning rounded-pill px-3 me-1"
                        onclick="editar(this)"
                        data-id="<%= c.idCliente %>"
                        data-tipo="<%= c.tipo %>"
                        data-nome="<%= c.nome %>"
                        data-fantasia="<%= c.nomeFantasia %>"
                        data-doc="<%= c.documento %>"
                        data-tel="<%= c.telefone %>"
                        data-email="<%= c.email %>"
                        data-end="<%= c.endereco %>">
                        ‚úèÔ∏è
                      </button>

                      <a href="/clientes/delete/<%= c.idCliente %>" 
                         class="btn btn-sm btn-outline-danger rounded-pill px-3"
                         title="Excluir Cliente"
                         onclick="return confirm('Tem certeza?');">
                        üóëÔ∏è
                      </a>
                    </td>
                  </tr>
                <% }) %>
                
                <% if(lista.length === 0) { %>
                  <tr>
                    <td colspan="4" class="text-center py-5">
                      <div class="opacity-25 mb-2" style="font-size: 3rem;">üìÇ</div>
                      <p class="text-white text-opacity-50">Nenhum cliente cadastrado ainda.</p>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    // L√≥gica de Valida√ß√£o Visual (Borda Vermelha)
    (() => {
      'use strict'
      const forms = document.querySelectorAll('.needs-validation')
      Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
          if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
          }
          form.classList.add('was-validated')
        }, false)
      })
    })()

    function alternarTipo() {
      const tipo = document.getElementById('tipoCliente').value;
      const labelNome = document.getElementById('labelNome');
      const labelDoc = document.getElementById('labelDocumento');
      const divFantasia = document.getElementById('divFantasia');
      const inputDoc = document.getElementById('inputDoc');

      if (tipo === 'PF') {
        // Atualiza Labels e Placeholder
        labelNome.innerHTML = 'Nome Completo <span class="text-required">*</span>';
        labelDoc.innerHTML = 'CPF <span class="text-required">*</span>';
        divFantasia.style.display = "none";
        
        inputDoc.setAttribute("maxlength", "14");
        inputDoc.setAttribute("placeholder", "000.000.000-00");
      } else {
        labelNome.innerHTML = 'Raz√£o Social <span class="text-required">*</span>';
        labelDoc.innerHTML = 'CNPJ <span class="text-required">*</span>';
        divFantasia.style.display = "block";
        
        inputDoc.setAttribute("maxlength", "18");
        inputDoc.setAttribute("placeholder", "00.000.000/0000-00");
      }
    }

    function mascaraDocumento(input) {
      const tipo = document.getElementById('tipoCliente').value;
      let v = input.value.replace(/\D/g, "");

      if (tipo === 'PF') {
        if (v.length > 11) v = v.slice(0, 11);
        v = v.replace(/(\d{3})(\d)/, "$1.$2");
        v = v.replace(/(\d{3})(\d)/, "$1.$2");
        v = v.replace(/(\d{3})(\d{1,2})$/, "$1-$2");
      } else {
        if (v.length > 14) v = v.slice(0, 14);
        v = v.replace(/^(\d{2})(\d)/, "$1.$2");
        v = v.replace(/^(\d{2})\.(\d{3})(\d)/, "$1.$2.$3");
        v = v.replace(/\.(\d{3})(\d)/, ".$1/$2");
        v = v.replace(/(\d{4})(\d)/, "$1-$2");
      }
      input.value = v;
    }

    function mascaraTelefone(input) {
      let v = input.value.replace(/\D/g, "");
      if (v.length > 11) v = v.slice(0, 11);
      v = v.replace(/^(\d{2})(\d)/g, "($1) $2");
      v = v.replace(/(\d)(\d{4})$/, "$1-$2");
      input.value = v;
    }

    function editar(btn) {
      const d = btn.dataset;
      document.getElementById('tipoCliente').value = d.tipo;
      alternarTipo();
      
      document.getElementById('inputNome').value = d.nome;
      document.getElementById('inputFantasia').value = d.fantasia;
      document.getElementById('inputDoc').value = d.doc;
      document.getElementById('inputTel').value = d.tel;
      document.getElementById('inputEmail').value = d.email;
      document.getElementById('inputEnd').value = d.end;

      const form = document.getElementById('formCliente');
      form.action = "/clientes/update/" + d.id; // Precisa implementar rota update no back se quiser funcionalidade real
      
      document.getElementById('formTitle').innerText = "‚úèÔ∏è Editando Cliente";
      
      const btnSalvar = document.getElementById('btnSalvar');
      btnSalvar.innerHTML = '<span class="fs-6">üíæ</span> Atualizar';
      btnSalvar.classList.remove('btn-primary');
      btnSalvar.classList.add('btn-warning-custom');
      
      document.getElementById('btnCancelar').style.display = "block";
    }

    function limparForm() {
      const form = document.getElementById('formCliente');
      form.reset();
      form.classList.remove('was-validated'); // Reseta o visual vermelho
      form.action = "/clientes/add";
      
      document.getElementById('formTitle').innerText = "‚ú® Novo Cliente";
      
      const btnSalvar = document.getElementById('btnSalvar');
      btnSalvar.innerHTML = '<span class="fs-6">üíæ</span> Salvar Cadastro';
      btnSalvar.classList.add('btn-primary');
      btnSalvar.classList.remove('btn-warning-custom');
      
      document.getElementById('btnCancelar').style.display = "none";
      alternarTipo();
    }
  </script>

</body>
</html>